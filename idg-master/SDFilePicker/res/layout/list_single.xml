<?xml version="1.0" encoding="utf-8"?>
<paul.arian.fileselector.CheckableRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="8dp">

    <com.superdata.marketing.view.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/folder"
            app:layout_heightPercent="8%w"
            app:layout_widthPercent="8%w"/>

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="1%w"
            app:layout_textSizePercent="5.1%w"
            android:layout_toLeftOf="@+id/myCheckBox"
            android:layout_toRightOf="@+id/img"
            android:gravity="center_vertical"
            android:textColor="#000"/>

        <CheckBox
            android:id="@+id/myCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/customcheckbox_background"
            android:button="@drawable/customcheckbox"
            android:clickable="false"
            android:focusable="false"
            />
    </com.superdata.marketing.view.percent.PercentRelativeLayout>
</paul.arian.fileselector.CheckableRelativeLayout>