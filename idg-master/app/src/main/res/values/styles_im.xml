<resources>
    color_content_time
    <!--cx-->
    //聊天的时间
    <style name="chat_text_date_style">
        <item name="android:padding">@dimen/chat_content_date_time_padding</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:layout_marginBottom">@dimen/chat_item_content_spacing_bottom</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/btn_gray_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_chat_date_text</item>
        <item name="android:background">@drawable/timestampe_bg</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/chat_content_date_time_margin</item>
        <!--<item name="android:visibility">gone</item>-->
    </style>

    //通知
    <style name="chat_notice_msg_style">
        <item name="android:textColor">@color/btn_gray_normal</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_chat_notice</item>
        <item name="android:background">@drawable/timestampe_bg</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    //接收时-聊天人的名字
    <style name="chat_text_name_style">
        <item name="android:textColor">@color/color_item_user_name</item>
        <item name="android:textSize">@dimen/font_size_item_name_received</item>
        <item name="android:layout_marginLeft">@dimen/chat_item_otherIcon_spacing_lr</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_toRightOf">@+id/img_user_icon</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">20</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginBottom">@dimen/chat_contentRelativeLayout_top_spacing_lr
        </item>

    </style>

    //聊天的文字
    <style name="chat_content_date_style">
        <!--<item name="android:minHeight">40dp</item>-->
        <item name="android:gravity">center</item>
        <!--<item name="android:layout_marginTop">15dp</item>-->
        <!--<item name="android:layout_marginBottom">15dp</item>-->
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    //聊天的文字
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:autoLink="web"-->
    <!--android:text="车受伤的反馈几乎是来得及发上来的解放路口就多了几分收代理费吉林省空间的浪费就拉丝看得见浪费时间的浪费空间ld!"-->
