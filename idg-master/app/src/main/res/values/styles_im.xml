    <!--android:paddingRight="@dimen/chat_content_spacing_right"-->
    <!--android:textSize="@dimen/font_size_chat_content"-->

    //右边语音小图标
    <style name="chat_voice_right_style">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginRight">@dimen/chat_item_otherIcon_spacing_lr</item>
        <item name="android:src">@anim/play_sent_voice</item>
    </style>

    <style name="chat_voice_left_style">
        <!--<item name="android:id">@+id/iv_voice</item>-->
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginLeft">@dimen/chat_item_otherIcon_spacing_lr</item>
        <item name="android:src">@anim/play_receiver_voice</item>
    </style>

    //右边-语音长度文字style
    <style name="chat_voice_length_text_right_style">
        <item name="android:textColor">@color/color_item_user_name</item>
        <item name="android:textSize">@dimen/font_size_item_name</item>
        <item name="android:layout_marginRight">@dimen/chat_item_otherIcon_spacing_lr</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toLeftOf">@id/iv_voice_ly</item>
    </style>

    //左边-语音长度文字style
    <style name="chat_voice_length_text_left_style">
        <item name="android:textColor">@color/color_item_user_name</item>
        <item name="android:textSize">@dimen/font_size_item_name</item>
        <item name="android:layout_marginRight">@dimen/chat_item_otherIcon_spacing_lr</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@id/iv_voice_ly</item>
    </style>

    //聊天界面左边-百度小图标
    <style name="chat_left_baidu_style">
        <item name="android:layout_width">@dimen/chat_item_baidu_icon_width</item>
        <item name="android:layout_height">@dimen/chat_item_baidu_icon_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/chat_item_otherIcon_spacing_lr</item>
        <item name="android:src">@mipmap/up_class_pos</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_toRightOf">@id/rl_content_new</item>
    </style>

    //聊天界面右边-百度小图标
    <style name="chat_right_baidu_style">
        <item name="android:layout_width">@dimen/chat_item_baidu_icon_width</item>
        <item name="android:layout_height">@dimen/chat_item_baidu_icon_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/chat_item_otherIcon_spacing_lr</item>
        <item name="android:src">@mipmap/up_class_pos</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_toLeftOf">@id/rl_content</item>
    </style>

    //聊天框的上下边距
    <style name="chat_content_style">
        <item name="android:layout_marginBottom">@dimen/chat_item_content_spacing_bottom</item>
        <item name="android:layout_marginTop">@dimen/chat_item_content_spacing_top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    //聊天右边头像
    <style name="chat_user_icon_right_style">
        <item name="android:layout_width">@dimen/chat_icon_wh</item>
        <item name="android:layout_height">@dimen/chat_icon_wh</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginRight">@dimen/chat_icon_spacing_lt</item>
        <item name="android:background">@mipmap/contact_icon</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    //聊天左边头像
    <style name="chat_user_icon_left_style">
        <item name="android:layout_width">@dimen/chat_icon_wh</item>
        <item name="android:layout_height">@dimen/chat_icon_wh</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">@dimen/chat_icon_spacing_lt</item>
        <item name="android:background">@mipmap/contact_icon</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    //左边聊天框父View
    <style name="chat_content_viewGroup_left_style">
        <item name="android:layout_below">@+id/tv_user_name</item>
        <item name="android:layout_marginLeft">@dimen/chat_contentRelativeLayout_spacing_lr</item>
        <item name="android:layout_toRightOf">@id/img_user_icon</item>
        <item name="android:background">@drawable/chatfrom_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    //左边聊天框父View-阅后即焚
    <style name="hot_chat_content_viewGroup_left_style">
        <item name="android:layout_below">@+id/tv_user_name</item>
        <item name="android:layout_marginLeft">@dimen/chat_contentRelativeLayout_spacing_lr</item>
        <item name="android:layout_toRightOf">@id/img_user_icon</item>
        <item name="android:background">@drawable/chatting_hot_received_message_bg</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    //右边聊天框父View
    <style name="chat_content_viewGroup_right_style">
        <item name="android:layout_marginRight">@dimen/chat_contentRelativeLayout_spacing_lr</item>
        <item name="android:layout_toLeftOf">@id/img_user_icon</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/chatto_bg</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    //右边聊天框各种状态的父布局
    <style name="chat_content_viewGroup_right_state_style">
        <!--<item name="android:layout_marginRight">@dimen/chat_contentRelativeLayout_spacing_lr</item>-->
        <item name="android:background">@drawable/chatto_bg</item>
        <item name="android:layout_toLeftOf">@id/rl_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    //发送图片
    <style name="chat_sendPic_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    //接收图片
    <style name="chat_receivePic_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


    //百分比
    <style name="chat_percentage_num">
        <item name="android:textColor">@color/color_item_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">0%</item>
        <item name="android:maxLength">6</item>
        <item name="android:visibility">gone</item>
    </style>

    //进度缓冲有父View
    <style name="chat_content_progressBar">
        <item name="android:layout_width">@dimen/chat_item_progressbar_wh</item>
        <item name="android:layout_height">@dimen/chat_item_progressbar_wh</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:visibility">gone</item>
    </style>

    //进度缓冲无父View,需要间距
    <style name="chat_content_progressBar_need_spacing">
        <item name="android:layout_width">@dimen/chat_item_progressbar_wh</item>
        <item name="android:layout_height">@dimen/chat_item_progressbar_wh</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/chat_item_otherIcon_spacing_lr</item>
        <item name="android:visibility">gone</item>
    </style>

    //右边的信息状态
    <style name="chat_tv_ack_style">
        <item name="android:textColor">@color/color_item_user_name</item>
        <item name="android:textSize">@dimen/font_size_chat_message_state</item>
        <item name="android:layout_marginRight">@dimen/chat_item_otherIcon_spacing_lr</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/text_ack_msg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="chat_msg_status_style">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/chat_item_otherIcon_spacing_lr</item>
        <item name="android:src">@drawable/msg_state_failed_resend</item>
        <item name="android:visibility">gone</item>
    </style>

    //未读 //已读
    <style name="chat_tv_delivered_style">
        <item name="android:textColor">@color/color_item_user_name</item>
        <item name="android:textSize">@dimen/font_size_chat_message_state</item>
        <item name="android:layout_marginRight">@dimen/chat_item_otherIcon_spacing_lr</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/text_delivered_msg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    //发送文件-右边
    <style name="chat_send_file">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_item_name</item>
        <item name="android:textSize">@dimen/font_size_item_content</item>
        <!--<item name="android:text">测试名字测试名字！</item>-->
    </style>

    //linearlayout
    <style name="im_business_list_font">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/im_business_padding_left_and_right</item>
        <item name="android:textSize">@dimen/font_size_item_name_business</item>
    </style>

    //字体
    <style name="im_business_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    //字体
    <style name="im_business_list_font2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_item_name</item>
    </style>

    //头像
    <style name="im_business_list_icon">
        <item name="android:layout_width">@dimen/im_business_icon_wh</item>
        <item name="android:layout_height">@dimen/im_business_icon_wh</item>
    </style>

    //工作圈
    <style name="social_pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="comment_dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 显示对话框时当前的屏幕是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="progress_style" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="style0">
        <item name="android:textSize">20sp</item>
        <!--<item name="android:textColor">@color/</item>-->
    </style>

    <style name="style1">
        <item name="android:textSize">15sp</item>
        <!--<item name="android:textColor">@color/</item>-->
        <!--<item name="android:textStyle">italic</item>-->
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#F08080</item>
        <item name="colorControlActivated">#F08080</item>
    </style>

    <style name="MyEditText2" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#868686</item>
        <item name="colorControlActivated">#868686</item>
    </style>

    <style name="im_voice_detail_style">
        <item name="android:textColor">@color/color_item_user_name</item>
        <item name="android:textSize">@dimen/font_size_item_name_received</item>
        <item name="android:layout_marginLeft">@dimen/chat_item_otherIcon_spacing_lr</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_toRightOf">@+id/img_user_icon</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">20</item>
        <item name="android:layout_marginBottom">@dimen/chat_contentRelativeLayout_top_spacing_lr
        </item>

    </style>

</resources>
