<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:cx="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/sd_top_title"/>

    <com.superdata.marketing.view.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
    >

        <!--<tablayout.view.textview.FontTextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="原密码："-->
        <!--android:textColor="@color/black"-->
        <!--cx:layout_textSizePercent="5%w"-->
        <!--/>-->

        <tablayout.view.textview.FontEditext
            android:id="@+id/edOldPsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/personal_hint_old_password"
            android:password="true"
            android:textColorHint="@color/text_black_l"
            android:textSize="@dimen/font_size_item_name"
        />
    </com.superdata.marketing.view.percent.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/dividing_line"/>

    <com.superdata.marketing.view.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <!--<tablayout.view.textview.FontTextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="新密码："-->
        <!--android:textColor="@color/black"-->

        <!--cx:layout_textSizePercent="5%w"/>-->

        <tablayout.view.textview.FontEditext
            android:id="@+id/edConfirmPsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/personal_hint_new_password"
            android:password="true"
            android:textColorHint="@color/text_black_l"
            android:textSize="@dimen/font_size_item_name"
        />
    </com.superdata.marketing.view.percent.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/dividing_line"/>

    <com.superdata.marketing.view.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <!--<tablayout.view.textview.FontTextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="确认密码："-->
        <!--android:textColor="@color/black"-->
        <!--cx:layout_textSizePercent="5%w"/>-->

        <tablayout.view.textview.FontEditext
            android:id="@+id/edNewPsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/personal_hint_new_again_password"
            android:password="true"
            android:textColorHint="@color/text_black_l"
            android:textSize="@dimen/font_size_item_name"/>
    </com.superdata.marketing.view.percent.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/dividing_line"/>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/register_bt_bg"
        android:text="确定"
        android:textColor="@color/white"/>
</LinearLayout>