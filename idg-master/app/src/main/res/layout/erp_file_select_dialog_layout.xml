<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_bottom_height"
        android:background="@color/dialog_title_and_foot_bg">

        <tablayout.view.textview.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/file_dialog_title_str"
            android:textSize="@dimen/sumb_detail_size_15"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:background="@color/white">

        <include
            android:id="@+id/file_btn_include"
            layout="@layout/erp_detail_file_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_bottom_height">

        <com.superdata.marketing.view.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_bottom_height"
            android:background="@color/dialog_title_and_foot_bg"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/erp_dialog_sure_tv_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/erp_submit_delete_btn_item_bg">

                <LinearLayout
                    android:layout_width="@dimen/dialog_button_width"
                    android:layout_height="@dimen/dialog_button_height"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/btn_submit_bg" />

                    <tablayout.view.textview.FontTextView
                        android:id="@+id/send_bottom_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:text="@string/choose_sex_sure"
                        android:textSize="@dimen/sumb_detail_size_15" />

                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/erp_dialog_cancer_tv_str"
                android:layout_width="@dimen/dialog_button_width"
                android:layout_height="@dimen/dialog_button_height"
                android:layout_marginLeft="20dp"

                android:background="@drawable/erp_submit_delete_btn_item_bg"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"

                        android:background="@mipmap/btn_submit_cancer" />

                    <tablayout.view.textview.FontTextView
                        android:id="@+id/erp_dialog_cancer_font_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:text="@string/choose_sex_cancel"
                        android:textSize="@dimen/sumb_detail_size_15" />
                </LinearLayout>
            </RelativeLayout>

        </com.superdata.marketing.view.percent.PercentLinearLayout>
    </LinearLayout>


</LinearLayout>
