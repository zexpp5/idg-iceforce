<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_gray_circle_5r"
    >

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_spacing_10dp"
            android:layout_marginLeft="@dimen/dp_spacing_10dp"
            android:layout_marginRight="@dimen/dp_spacing_10dp"
            android:layout_marginTop="@dimen/dp_spacing_10dp"
            app:cardCornerRadius="@dimen/dp_spacing_25dp"
            app:cardElevation="3dp"
        >

            <yunjing.view.DrawText
                android:id="@+id/item_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
            />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_spacing_10dp"
            android:layout_toRightOf="@+id/cardview"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp10"
            android:paddingTop="@dimen/dp10">


            <RelativeLayout
                android:id="@+id/ll_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/one_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/one_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_spacing_8dp"
                        android:ellipsize="end"
                        android:maxEms="12"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="@dimen/sp_font_detail_content_16sp"/>

                    <TextView
                        android:id="@+id/label_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/red_radius_brim"
                        android:paddingBottom="2dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text="广州"
                        android:textColor="#bb3c3c"
                        android:textSize="11sp"
                        android:visibility="gone"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/one_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/main_red"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/two_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="负责人:  "
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/ss_text_size_title"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/two_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/ss_text_size_title"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/three_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="企业阶段:  "
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/ss_text_size_title"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/three_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/ss_text_size_title"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_spacing_10dp"
                android:paddingRight="@dimen/dp_spacing_10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/four_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="所属行业:  "
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/ss_text_size_title"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/four_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/ss_text_size_title"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/five_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="休假时长:  "
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/ss_text_size_title"/>

                <TextView
                    android:id="@+id/five_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/ss_text_size_title"/>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>