<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/login_bg_color"
              android:orientation="vertical">
    <include
        android:id="@+id/title_super"
        layout="@layout/sd_top_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include
        android:id="@+id/top_bar_layout"
        layout="@layout/top_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:gravity="center"
        android:orientation="vertical"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cn_register_company_name"
                android:textSize="@dimen/l_text_size_16"
            />

            <tablayout.view.textview.FontEditext
                android:id="@+id/edt_register_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:hint="@string/cn_hint_register_company_name"
                android:paddingLeft="15dp"
                android:textColorHint="@color/color_login_hint"
                android:textSize="@dimen/sp14"
            />
        </LinearLayout>

        <include layout="@layout/erp_line_one_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pleaseinputnewpasswordhint"
                android:textSize="@dimen/l_text_size_16"
            />
            <tablayout.view.textview.FontEditext
                android:id="@+id/register_input_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:hint="@string/register_input_password_hint"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:text=""
                android:textColorHint="@color/color_login_hint"
                android:textSize="@dimen/sp14"
            />
        </LinearLayout>

        <include layout="@layout/erp_line_one_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/secondinputnewpasswordhint"
                android:textSize="@dimen/l_text_size_16"
            />

            <tablayout.view.textview.FontEditext
                android:id="@+id/register_input_edt2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:hint="@string/register_input_password_hint2"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColorHint="@color/color_login_hint"
                android:textSize="@dimen/sp14"
            />
        </LinearLayout>

        <include layout="@layout/erp_line_one_view"/>

        <Button
            android:id="@+id/register_input_finish_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/register_bt_bg"
            android:text="@string/register_input_finish"
            android:textColor="@color/white"
            android:textSize="@dimen/l_text_size_17"
        />
    </LinearLayout>
</LinearLayout>
