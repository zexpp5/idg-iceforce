<?xml version="1.0" encoding="utf-8"?>
<com.superdata.marketing.view.percent.PercentLinearLayout
    android:id="@+id/ly_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="right"
>
    <tablayout.view.textview.FontTextView
        android:id="@+id/left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/change_left_blue_border"
        android:gravity="center"
        android:textSize="13sp"
        app:layout_paddingPercent="1.5%w"
    />
    <tablayout.view.textview.FontTextView
        android:id="@+id/right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-2px"
        android:background="@drawable/change_right_blue_border"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="13sp"
        app:layout_paddingPercent="1.5%w"
    />
</com.superdata.marketing.view.percent.PercentLinearLayout>
