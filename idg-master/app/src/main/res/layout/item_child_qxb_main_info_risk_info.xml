<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
        <include layout="@layout/line_layout_1dp"
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_15sp"
        />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_10dp"
            android:layout_weight="3"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
    >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
        >
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_qxb_type_bg"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/dp_spacing_3dp"
                android:paddingLeft="@dimen/dp_spacing_10dp"
                android:paddingRight="@dimen/dp_spacing_10dp"
                android:paddingTop="@dimen/dp_spacing_3dp"
                android:textColor="@color/text_black_s"
                android:textSize="@dimen/sp_font_detail_content_15sp"
            />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_10dp"
            android:layout_weight="3"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_15sp"/>

    </LinearLayout>

</LinearLayout>
