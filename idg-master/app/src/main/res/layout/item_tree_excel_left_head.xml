<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leftLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charcoal">



    <ImageView
        android:id="@+id/left_item_img"
        style="@style/project_manager_detail_leftImgStyle" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/left_item_img"
        android:gravity="center_vertical"
        android:textColor="@color/table_content_text_color"
        android:textSize="@dimen/sp_font_personal_records_15sp"
        tools:text="text" />


    <View
        android:layout_width="@dimen/dp_spacing_1dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/table_content_line_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_spacing_1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/table_content_line_color" />
</RelativeLayout>
