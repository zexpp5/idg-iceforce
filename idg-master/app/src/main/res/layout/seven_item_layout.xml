<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp20"
        android:paddingTop="@dimen/dp20"
        android:paddingLeft="@dimen/dp_spacing_to_left_right_15dp"
        android:paddingRight="@dimen/dp_spacing_to_left_right_15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="方案类型"
                android:textColor="#333333"
                android:textSize="17sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="日期"
                android:textColor="@color/text_black_s"
                android:textSize="@dimen/sp_font_detail_content_15sp" />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="4"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="2017-12-12 "
                android:textColor="@color/text_black_xl"
                android:textSize="@dimen/sp_font_detail_content_15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="内容"
                android:textColor="@color/text_black_s"
                android:textSize="@dimen/sp_font_detail_content_15sp" />

            <TextView
                android:id="@+id/one_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/text_black_xl"
                android:textSize="@dimen/sp_font_detail_content_15sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/two_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="币种"
                android:textColor="@color/text_black_s"
                android:textSize="@dimen/sp_font_detail_content_15sp" />

            <TextView
                android:id="@+id/two_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_black_xl"
                android:textSize="@dimen/sp_font_detail_content_15sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/three_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="金额"
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_15sp" />

                <TextView
                    android:id="@+id/three_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/three_tips"
                    android:layout_toRightOf="@+id/three_title"
                    android:layout_weight="4"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="999999999"
                    android:textColor="@color/text_black_xl"
                    android:textSize="@dimen/sp_font_detail_content_15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/three_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="(￥万元/$ M)"
                android:textColor="@color/text_black_s"
                android:textSize="@dimen/sp_font_detail_content_15sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/four_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="通过"
                android:textColor="@color/text_black_s"
                android:textSize="@dimen/sp_font_detail_content_15sp" />

            <TextView
                android:id="@+id/four_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_black_xl"
                android:textSize="@dimen/sp_font_detail_content_15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/five_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="维护人"
                android:textColor="@color/text_black_s"
                android:textSize="@dimen/sp_font_detail_content_15sp" />

            <TextView
                android:id="@+id/five_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_black_xl"
                android:textSize="@dimen/sp_font_detail_content_15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/six_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="审批人"
                android:textColor="@color/text_black_s"
                android:textSize="@dimen/sp_font_detail_content_15sp" />

            <TextView
                android:id="@+id/six_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_black_xl"
                android:textSize="@dimen/sp_font_detail_content_15sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"
        android:visibility="gone" />

</LinearLayout>