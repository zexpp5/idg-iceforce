<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_water"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_spacing_10dp"
        android:paddingLeft="@dimen/dp_spacing_15dp"
        android:paddingRight="@dimen/dp_spacing_15dp"
        android:paddingTop="@dimen/dp_spacing_10dp"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
        >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/sp_font_title_center_18sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fund1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_spacing_15dp"
            android:orientation="horizontal"
        >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="投资金额"
                android:textColor="@color/text_black_s"/>

            <TextView
                android:id="@+id/tv_fund1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="3.5"
                android:textColor="@color/text_black_xl"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fund3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="所占股比"
                android:textColor="@color/text_black_s"/>

            <TextView
                android:id="@+id/tv_fund3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="3.5"
                android:textColor="@color/text_black_xl"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fund4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
        >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="所占估值"
                android:textColor="@color/text_black_s"/>

            <TextView
                android:id="@+id/tv_fund4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="3.5"
                android:textColor="@color/text_black_xl"
            />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
