<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/department_title_layout"
            layout="@layout/top_title_layout" />

        <include
            android:id="@+id/head_bar_layout"
            layout="@layout/person_information_layout" />

        <include layout="@layout/bottom_line_view_three" />

        <LinearLayout
            android:orientation="horizontal"
            style="@style/linear_row_style_common">


            <tablayout.view.textview.FontTextView
                style="@style/font_text_content_sytle"
                android:text="@string/send_to" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/travel_copy_to_text"
                style="@style/font_select_textview_content_sytle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center_vertical" />
        </LinearLayout>

        <include layout="@layout/bottom_line_view" />

        <LinearLayout
            android:weightSum="2"
            style="@style/linear_row_style_common"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="@string/destination" />

                <tablayout.view.textview.FontEditext
                    android:id="@+id/travel_address_text"
                    style="@style/font_edtext_content_sytle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="交通工具：" />

                <tablayout.view.textview.FontEditext
                    android:id="@+id/travel_way_to_text"
                    style="@style/font_edtext_content_sytle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/bottom_line_view" />

        <LinearLayout
            android:orientation="horizontal"
            style="@style/linear_row_style_common"
            >

            <tablayout.view.textview.FontTextView
                android:id="@+id/time_text_width_id"
                style="@style/font_text_content_sytle"
                android:text="外出时间：" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/travel_time_start_text"
                style="@style/font_select_textview_content_sytle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />

        </LinearLayout>

        <include layout="@layout/bottom_line_view" />

        <LinearLayout
            android:orientation="horizontal"
            style="@style/linear_row_style_common">


            <tablayout.view.textview.FontTextView
                style="@style/font_text_content_sytle"
                android:text="@string/to_end" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/travel_time_end_text"
                style="@style/font_select_textview_content_sytle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />
        </LinearLayout>



        <include layout="@layout/bottom_line_view" />

        <LinearLayout
            android:orientation="horizontal"
            style="@style/linear_row_style_common">


            <tablayout.view.textview.FontTextView
                style="@style/font_text_content_sytle"
                android:text="外出事由：" />

            <tablayout.view.textview.FontEditext
                android:id="@+id/travel_reson_text"
                style="@style/font_edtext_content_sytle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                />

        </LinearLayout>

        <include layout="@layout/bottom_line_view" />


        <LinearLayout
            style="@style/file_center_explain_style"
            android:orientation="horizontal"
            >


            <tablayout.view.textview.FontTextView
                style="@style/font_text_content_sytle"
                android:text="外出说明："
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                />

            <tablayout.view.textview.FontEditext
                android:id="@+id/travel_explain_content_ed"
                android:gravity="top"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="@dimen/sp_font_detail_content_15sp" />
        </LinearLayout>

        <include layout="@layout/bottom_line_view_two" />

        <include layout="@layout/public_annex_layout" />
        <include layout="@layout/bottom_line_view_three" />

    </LinearLayout>



</RelativeLayout>