<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:background="@color/color_personnel_affairs_dialog_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d1d1d1"
        android:gravity="center"
        android:padding="10dp"
        android:text="标题"
        android:textColor="@color/color_personnel_affairs_dialog"
        android:textSize="@dimen/sp_font_home_page_title_20sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e1e4e3"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_spacing_10dp">

        <LinearLayout
            android:layout_width="@dimen/dialog_button_width"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_centerInParent="true"
            android:background="@drawable/erp_submit_delete_btn_item_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/color_personnel_affairs_list_dialog_btn_bg"
                android:drawableLeft="@mipmap/btn_submit_bg"
                android:drawablePadding="5dp"
                android:paddingLeft="@dimen/dp_spacing_10dp"
                android:text="确定"
                android:textColor="@color/color_personnel_affairs_list_dialog_btn_text"
                android:textSize="@dimen/sp_font_human_res_15sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/dialog_button_width"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/erp_submit_delete_btn_item_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/color_personnel_affairs_list_dialog_btn_bg"
                android:drawableLeft="@mipmap/btn_submit_cancer"
                android:drawablePadding="5dp"
                android:paddingLeft="@dimen/dp_spacing_10dp"
                android:textColor="@color/color_personnel_affairs_list_dialog_btn_text"
                android:textSize="@dimen/sp_font_human_res_15sp"
                android:text="取消"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
