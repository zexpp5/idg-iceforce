<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_bg"
              android:orientation="vertical">

    <include layout="@layout/top_title_layout" />

    <com.superdata.marketing.view.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <tablayout.view.xlistview.XListView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"/>

        <tablayout.view.textview.FontTextView
            android:id="@+id/tv_load_failure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="获取邮件失败，请重新获取"
            android:visibility="gone"
            app:layout_textSizePercent="5.1%w"/>
    </com.superdata.marketing.view.percent.PercentRelativeLayout>
</LinearLayout>