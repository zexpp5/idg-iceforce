<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        style="@style/submit_person_ll_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_img"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/action_person"/>

            <tablayout.view.textview.FontTextView
                android:layout_marginLeft="10dp"
                android:id="@+id/user_name"
                style="@style/d_s_left_font_sytle"
                android:text="张三"/>

            <tablayout.view.textview.FontTextView
                android:id="@+id/user_office"
                style="@style/d_s_left_font_sytle"
                android:layout_marginLeft="10dp"
                android:text="张三"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!--左边的textview的style-->
                <tablayout.view.textview.FontTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日期："/>
                <!--非输入的textview的style-->
                <tablayout.view.textview.FontTextView
                    android:id="@+id/log_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <!--右边title的style-->
                <tablayout.view.textview.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编号："/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/submit_no"
                    style="@style/d_s_content_font_textview_sytle"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <!--线条高度-->
    <include layout="@layout/submit_line_five_view"/>


</LinearLayout>