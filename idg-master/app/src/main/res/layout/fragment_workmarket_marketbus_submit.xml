<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="true"
              android:orientation="vertical">

    <include
        android:id="@+id/totle_layout"

        layout="@layout/top_title_layout"
    />

    <ScrollView
        style="@style/erp_scrollview_style"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <include
                android:id="@+id/head_bar_layout"
                layout="@layout/person_information_layout"/>

            <include layout="@layout/bottom_line_view_three"/>


            <LinearLayout
                style="@style/d_s_ll_style"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/d_s_s_in_tow_ll_style"
                    android:orientation="horizontal"
                >

                    <tablayout.view.textview.FontTextView
                        style="@style/d_s_left_font_sytle"
                        android:text="业务类型："/>

                    <!--倒三角的下拉框style-->
                    <tablayout.view.textview.FontTextView
                        android:id="@+id/business_type"
                        style="@style/d_s_content_font_select_textview_sytle"/>

                </LinearLayout>
                <!--币种和仓库公用字段好了=。= -->
                <LinearLayout
                    style="@style/d_s_s_in_tow_ll_right_style">

                    <tablayout.view.textview.FontTextView

                        style="@style/d_s_right_font_sytle"
                        android:text="抄送："/>

                    <tablayout.view.textview.FontTextView
                        android:id="@+id/cc"
                        style="@style/d_s_content_font_select_textview_sytle"/>
                </LinearLayout>


            </LinearLayout>

            <!--线条高度-->
            <include layout="@layout/erp_line_one_view"/>

            <LinearLayout
                style="@style/d_s_ll_style"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <tablayout.view.textview.FontTextView
                    style="@style/d_s_left_font_sytle"
                    android:text="业务名称："/>

                <tablayout.view.textview.FontEditext
                    android:id="@+id/business_name"
                    style="@style/d_s_content_font_edtext_sytle_title"/>

            </LinearLayout>

            <!--线条高度-->
            <include layout="@layout/erp_line_one_view"/>

            <LinearLayout
                style="@style/d_s_ll_style"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/d_s_s_in_tow_ll_style"
                    android:orientation="horizontal"
                >

                    <tablayout.view.textview.FontTextView
                        style="@style/d_s_left_font_sytle"
                        android:text="关联客户："/>

                    <!--倒三角的下拉框style-->
                    <tablayout.view.textview.FontTextView
                        android:id="@+id/affiliate_customers"
                        style="@style/d_s_content_font_select_textview_sytle"/>

                </LinearLayout>
                <!--币种和仓库公用字段好了=。= -->
                <LinearLayout
                    style="@style/d_s_s_in_tow_ll_right_style">

                    <tablayout.view.textview.FontTextView

                        style="@style/d_s_right_font_sytle"
                        android:text="联系人："/>

                    <tablayout.view.textview.FontTextView
                        android:id="@+id/contact_person"
                        style="@style/d_s_right_font_sytle"/>
                </LinearLayout>


            </LinearLayout>

            <!--线条高度-->
            <include layout="@layout/erp_line_one_view"/>

            <LinearLayout
                style="@style/d_s_ll_style"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/d_s_s_in_tow_ll_style"
                    android:orientation="horizontal"
                >

                    <tablayout.view.textview.FontTextView
                        android:id="@+id/customer_name"
                        style="@style/d_s_left_font_sytle"
                        android:text="开始时间："/>

                    <!--倒三角的下拉框style-->
                    <tablayout.view.textview.FontTextView
                        android:id="@+id/starting_time"
                        style="@style/d_s_content_font_select_textview_sytle"/>

                </LinearLayout>
                <!--币种和仓库公用字段好了=。= -->
                <LinearLayout
                    style="@style/d_s_s_in_tow_ll_right_style">

                    <tablayout.view.textview.FontTextView

                        style="@style/d_s_right_font_sytle"
                        android:text="结束时间："/>

                    <tablayout.view.textview.FontTextView
                        android:id="@+id/end_time"
                        style="@style/d_s_content_font_select_textview_sytle"/>
                </LinearLayout>


            </LinearLayout>

            <!--线条高度-->
            <include layout="@layout/erp_line_one_view"/>

            <LinearLayout
                style="@style/d_s_ll_style"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/d_s_s_in_tow_ll_style"
                    android:orientation="horizontal"
                >

                    <tablayout.view.textview.FontTextView
                        style="@style/d_s_left_font_sytle"
                        android:text="涉及金额："/>

                    <!--倒三角的下拉框style-->
                    <tablayout.view.textview.FontEditext
                        android:id="@+id/money"
                        style="@style/d_s_content_font_edtext_sytle_title"
                        android:inputType="numberDecimal"/>

                </LinearLayout>
                <!--币种和仓库公用字段好了=。= -->
                <LinearLayout
                    style="@style/d_s_s_in_tow_ll_right_style">

                    <tablayout.view.textview.FontTextView

                        style="@style/d_s_right_font_sytle"
                        android:text="合同："/>

                    <ImageView
                        android:id="@+id/contract"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:src="@mipmap/work_contractx"/>

                </LinearLayout>


            </LinearLayout>

            <!--线条高度-->
            <include layout="@layout/erp_line_one_view"/>

            <LinearLayout
                style="@style/d_s_ll_style"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <tablayout.view.textview.FontTextView
                    style="@style/d_s_left_font_sytle"
                    android:text="业务内容："/>

                <tablayout.view.textview.FontEditext
                    android:id="@+id/reportcontent"
                    style="@style/d_s_content_font_edtext_sytle_title"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <include layout="@layout/bottom_line_view_two"/>

    <LinearLayout
        style="@style/enclosure_ll_style"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/annex_text"
            android:textSize="@dimen/sp_font_detail_content_15sp"/>

        <include
            android:id="@+id/file_btn_include"
            layout="@layout/erp_file_select_layout_detail"/>
    </LinearLayout>

    <include layout="@layout/bottom_line_view_three"/>

    <LinearLayout
        android:id="@+id/approval_process_all_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:visibility="invisible">

        <include layout="@layout/approval_process_layout"/>

    </LinearLayout>


</LinearLayout>