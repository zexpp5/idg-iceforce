            />

            <tablayout.view.textview.FontTextView
                style="@style/im_business_list_font"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon_head_img5"
                android:layout_toRightOf="@+id/icon_head_img5"
                android:text="@string/im_business_leave_submit"
                android:textColor="#333333"/>

        </RelativeLayout>

        <include layout="@layout/erp_im_line_one_view"></include>

        <RelativeLayout
            android:id="@+id/ll_im_business_leave"
            style="@style/im_business_style"
        >

            <ImageView
                android:id="@+id/icon_head_img6"
                style="@style/im_business_list_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/icon_holiday"
            />

            <tablayout.view.textview.FontTextView
                android:id="@+id/unread_msg_number_leave"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginBottom="-6dp"
                android:layout_marginLeft="-6dp"
                android:layout_toRightOf="@+id/icon_head_img6"
                android:background="@mipmap/icon_num"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/m_text_size"
                android:visibility="gone"
            />


            <tablayout.view.textview.FontTextView
                style="@style/im_business_list_font"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon_head_img6"
                android:layout_toRightOf="@+id/icon_head_img6"
                android:text="@string/im_business_private_chat"
                android:textColor="#333333"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ll_im_business_work_journal"
            style="@style/im_business_style"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/icon_head_img7"
                style="@style/im_business_list_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/icon_work_record"
            />

            <tablayout.view.textview.FontTextView
                android:id="@+id/unread_msg_number_work_journal"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginBottom="-6dp"
                android:layout_marginLeft="-6dp"
                android:layout_toRightOf="@+id/icon_head_img7"
                android:background="@mipmap/icon_num"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/m_text_size"
                android:visibility="gone"
            />

            <tablayout.view.textview.FontTextView
                style="@style/im_business_list_font"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon_head_img7"
                android:layout_toRightOf="@+id/icon_head_img7"
                android:text="@string/im_business_scan"
                android:textColor="#333333"/>

        </RelativeLayout>

        <include layout="@layout/erp_im_line_one_view"></include>

    </LinearLayout>
    </ScrollView>

</LinearLayout>
