<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_height_title_48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_spacing_20dp"
            android:background="@mipmap/back_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_spacing_10dp"
            android:text="小组工作汇总"
            android:textColor="@color/text_black_xl"
            android:textSize="@dimen/sp_font_detail_content_18sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_height_title_48dp"
                android:background="@color/bg_gray"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_reduce"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@mipmap/icon_public_back" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_spacing_8dp"
                    android:layout_marginRight="@dimen/dp_spacing_8dp"
                    android:text="2019年7月"
                    android:textSize="@dimen/sp_font_detail_content_16sp" />

                <LinearLayout
                    android:id="@+id/ll_add"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@mipmap/icon_right_arrow_tip" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="@dimen/dp_spacing_10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/icon_xmgj" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_spacing_10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="项目跟进"
                            android:textColor="@color/text_black_l" />

                        <TextView
                            android:id="@+id/tv_follow_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_spacing_8dp"
                            android:textColor="@color/text_black_xxl"
                            android:textSize="@dimen/sp_font_detail_content_16sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/icon_xjxm" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_spacing_10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新建项目"
                            android:textColor="@color/text_black_l" />

                        <TextView
                            android:id="@+id/tv_new_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_spacing_8dp"
                            android:textColor="@color/text_black_xxl"
                            android:textSize="@dimen/sp_font_detail_content_16sp" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/icon_ykxm" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_spacing_10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已看项目"
                            android:textColor="@color/text_black_l" />

                        <TextView
                            android:id="@+id/tv_saw_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_spacing_8dp"
                            android:textColor="@color/text_black_xxl"
                            android:textSize="@dimen/sp_font_detail_content_16sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/icon_wkxm" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_spacing_10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未看项目" />

                        <TextView
                            android:id="@+id/tv_not_see_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_spacing_8dp"
                            android:textColor="@color/text_black_xxl"
                            android:textSize="@dimen/sp_font_detail_content_16sp" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_height_title_48dp"
                    android:layout_marginLeft="@dimen/dp_spacing_20dp"
                    android:layout_marginRight="@dimen/dp_spacing_20dp"
                    android:layout_marginTop="@dimen/dp_spacing_10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_spacing_20dp"
                    android:layout_marginRight="@dimen/dp_spacing_20dp"
                    android:background="@color/bg_gray"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="项目跟进"
                                android:textColor="@color/text_black_l" />

                            <TextView
                                android:id="@+id/tv_follow_num_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_spacing_8dp"
                                android:textColor="@color/text_black_xxl"
                                android:textSize="@dimen/sp_font_detail_content_16sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="新建项目"
                                android:textColor="@color/text_black_l" />

                            <TextView
                                android:id="@+id/tv_new_num_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_spacing_8dp"
                                android:textColor="@color/text_black_xxl"
                                android:textSize="@dimen/sp_font_detail_content_16sp" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="已看项目"
                                android:textColor="@color/text_black_l" />

                            <TextView
                                android:id="@+id/tv_saw_num_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_spacing_8dp"
                                android:textColor="@color/text_black_xxl"
                                android:textSize="@dimen/sp_font_detail_content_16sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="未看项目"
                                android:textColor="@color/text_black_l" />

                            <TextView
                                android:id="@+id/tv_not_see_num_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_spacing_8dp"
                                android:textColor="@color/text_black_xxl"
                                android:textSize="@dimen/sp_font_detail_content_16sp" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_spacing_5dp"
                    android:layout_marginTop="@dimen/dp_spacing_20dp"
                    android:background="@color/dividing_line" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_spacing_10dp"
                android:layout_marginLeft="@dimen/dp_spacing_30dp"
                android:layout_marginTop="@dimen/dp_spacing_20dp"
                android:text="项目跟进" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart_1"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_spacing_10dp"
                android:layout_marginLeft="@dimen/dp_spacing_30dp"
                android:layout_marginTop="@dimen/dp_spacing_20dp"
                android:text="新建项目" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart_2"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_spacing_10dp"
                android:layout_marginLeft="@dimen/dp_spacing_30dp"
                android:layout_marginTop="@dimen/dp_spacing_20dp"
                android:text="已看项目" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart_3"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_spacing_10dp"
                android:layout_marginLeft="@dimen/dp_spacing_30dp"
                android:layout_marginTop="@dimen/dp_spacing_20dp"
                android:text="未看项目" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart_4"
                android:layout_width="match_parent"
                android:layout_height="180dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>