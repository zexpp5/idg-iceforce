<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9f9f9"
            android:ellipsize="end"
            android:paddingBottom="@dimen/dp_spacing_5dp"
            android:paddingLeft="@dimen/dp_spacing_10dp"
            android:paddingTop="@dimen/dp_spacing_5dp"
            android:singleLine="true"
            android:text="你你你"
            android:textColor="#666666"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/work_all_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/item_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_one_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:padding="@dimen/dp_spacing_4dp"
                    android:src="@mipmap/super_power_icon" />

                <tablayout.view.textview.FontTextView
                    android:id="@+id/unread_msg_number_work_one"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="-8dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/item_one_image"
                    android:background="@mipmap/icon_num"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_one_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_one_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_spacing_5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="你你你"
                    android:textColor="#333333"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_two_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"

                    android:padding="@dimen/dp_spacing_4dp"
                    android:src="@mipmap/icon_work_record" />

                <tablayout.view.textview.FontTextView
                    android:id="@+id/unread_msg_number_work_two"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="-8dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/item_two_image"
                    android:background="@mipmap/icon_num"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_two_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_two_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_spacing_5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="你你你"
                    android:textColor="#333333"
                    android:textSize="13sp"

                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_three_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="10dp"
                    android:padding="@dimen/dp_spacing_4dp"
                    android:src="@mipmap/icon_work_record" />

                <tablayout.view.textview.FontTextView
                    android:id="@+id/unread_msg_number_work_three"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="-8dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/item_three_image"
                    android:background="@mipmap/icon_num"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_three_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_three_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_spacing_5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="你你你"
                    android:textColor="#333333"
                    android:textSize="13sp"

                    />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_spacing_10dp"
            android:layout_marginRight="@dimen/dp_spacing_10dp"
            android:background="#ffffff" />
    </LinearLayout>

</LinearLayout>