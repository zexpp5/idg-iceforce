<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/gg_ll_bg"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical"
>

    <include
        android:id="@+id/department_title_layout"
        layout="@layout/top_title_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/company_announce_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_spacing_12dp"
                android:layout_marginRight="@dimen/dp_spacing_10dp"
                android:layout_marginTop="@dimen/dp_spacing_20dp"
                android:text=""
                android:textColor="#333333"
                android:textSize="18sp"
            />
            <TextView
                android:id="@+id/company_announce_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_spacing_12dp"
                android:layout_marginRight="@dimen/dp_spacing_10dp"
                android:layout_marginTop="@dimen/dp_spacing_20dp"
                android:text=""
                android:textColor="#666666"
                android:textSize="16sp"
            />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
