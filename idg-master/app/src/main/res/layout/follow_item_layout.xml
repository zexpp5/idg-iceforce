<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <View
        android:id="@+id/space_item_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#fff" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="@dimen/dp_spacing_to_left_right_15dp"
        android:paddingRight="@dimen/dp_spacing_to_left_right_15dp"
        android:paddingTop="12dp"
        android:text="跟进情况"
        android:textColor="#333"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_spacing_to_left_right_15dp"
        android:paddingRight="@dimen/dp_spacing_to_left_right_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/one_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="日期"
                android:textColor="@color/text_black_s"
                android:textSize="@dimen/sp_font_detail_content_15sp" />


            <TextView
                android:id="@+id/one_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/one_title"
                android:layout_weight="2"
                android:ellipsize="end"
                android:textColor="@color/text_black_xl"
                android:textSize="@dimen/sp_font_detail_content_15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/edit_image"
            android:layout_width="@dimen/dp_spacing_20dp"
            android:layout_height="@dimen/dp_spacing_20dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/edit_pic" />

        <ImageView
            android:id="@+id/delete_image"
            android:layout_width="@dimen/dp_spacing_20dp"
            android:layout_height="@dimen/dp_spacing_20dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/edit_image"
            android:background="@mipmap/delete_pic" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_spacing_5dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_spacing_to_left_right_15dp"
        android:paddingRight="@dimen/dp_spacing_to_left_right_15dp">

        <TextView
            android:id="@+id/four_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="与会者"
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_15sp" />

        <TextView
            android:id="@+id/four_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/four_title"
            android:layout_weight="2"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_black_xl"
            android:textSize="@dimen/sp_font_detail_content_15sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_spacing_5dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_spacing_to_left_right_15dp"
        android:paddingRight="@dimen/dp_spacing_to_left_right_15dp">

        <TextView
            android:id="@+id/three_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="跟进状态"
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_15sp" />

        <TextView
            android:id="@+id/three_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/three_title"
            android:layout_weight="2"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_black_xl"
            android:textSize="@dimen/sp_font_detail_content_15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_spacing_5dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_spacing_to_left_right_15dp"
        android:paddingRight="@dimen/dp_spacing_to_left_right_15dp">

        <TextView
            android:id="@+id/two_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Keynote"
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_15sp" />

        <TextView
            android:id="@+id/two_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=""
            android:textColor="@color/text_black_xl"
            android:textSize="@dimen/sp_font_detail_content_15sp" />

    </LinearLayout>

    <View
        android:id="@+id/bottom_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#f2f2f2" />

    <include
        android:id="@+id/line_big"
        layout="@layout/bottom_line_view_big" />

</LinearLayout>