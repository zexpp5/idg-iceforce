<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout android:id="@+id/ll_line"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_view_line_1dp"
            android:background="@color/erp_line_view_colors"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_spacing_to_left_right_10dp"
        android:paddingLeft="@dimen/dp_spacing_to_left_right_10dp"
        android:paddingRight="@dimen/dp_spacing_to_left_right_10dp"
        android:paddingTop="@dimen/dp_spacing_to_left_right_10dp"
    >


        <LinearLayout
            android:id="@+id/ll_program_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/tv_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/action_person"
                    />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_black_xl"
                android:textSize="@dimen/sp_font_detail_content_15sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:ellipsize="end"
                android:textColor="@color/text_black_s"
                android:textSize="@dimen/sp_font_detail_content_15sp"/>

            <com.cxgz.activity.cxim.workCircle.widgets.ExpandTextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/text_black_xl"
                android:textSize="@dimen/sp_font_detail_content_15sp"
                app:showLines="4"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:ellipsize="end"
                android:textColor="@color/text_black_s"
                android:textSize="@dimen/sp_font_detail_content_15sp"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ellipsize="end"
                android:textColor="@color/text_black_s"
                android:textSize="@dimen/sp_font_detail_content_15sp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>