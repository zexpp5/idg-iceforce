<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/custom_approval_item_name_layout"
        android:orientation="vertical"
        android:layout_marginRight="3dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/item_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/sp_item_title_sp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true"
            android:text=""
            android:id="@+id/custom_approval_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:visibility="gone"
            android:textColor="#666666"
            android:textSize="@dimen/sp_item_time_sp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_centerVertical="true"
            android:text=""
            android:id="@+id/custom_approval_item_name_below_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/item_time_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        >

        <TextView
            android:textSize="@dimen/sp_item_time_sp"
            android:paddingRight="10dp"
            android:text=""
            android:id="@+id/custom_approval_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
        />
        <TextView
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_item_time_sp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/custom_approval_item_time_below_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"
        />



</LinearLayout>