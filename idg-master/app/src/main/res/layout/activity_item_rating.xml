<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_bar_layout"
        layout="@layout/top_title_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_spacing_10dp"
        android:paddingLeft="@dimen/dp_spacing_20dp"
        android:paddingTop="@dimen/dp_spacing_15dp"
        android:text="项目介绍"
        android:textSize="@dimen/sp_font_detail_content_15sp" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_spacing_8dp"
        android:paddingLeft="@dimen/dp_spacing_20dp"
        android:paddingRight="@dimen/dp_spacing_20dp"
        android:textColor="@color/text_black_s"
        android:textSize="@dimen/sp_font_detail_content_14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_view_line_2dp"
        android:background="@color/dividing_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_spacing_10dp"
        android:paddingLeft="@dimen/dp_spacing_20dp"
        android:paddingTop="@dimen/dp_spacing_15dp"
        android:text="请对团队评分"
        android:textSize="@dimen/sp_font_detail_content_15sp" />

    <RatingBar
        android:id="@+id/rb_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_spacing_8dp"
        android:layout_marginBottom="@dimen/dp_spacing_8dp"
        android:numStars="5"
        android:rating="3"
        android:stepSize="1"
        android:isIndicator="false"
        android:progressTint="#FFDD55"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_team_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_spacing_8dp"
        android:layout_gravity="center"
        android:text="3分"
        android:textColor="#FFDD55"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_view_line_2dp"
        android:background="@color/dividing_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_spacing_10dp"
        android:paddingLeft="@dimen/dp_spacing_20dp"
        android:paddingTop="@dimen/dp_spacing_15dp"
        android:text="请对业务评分"
        android:textSize="@dimen/sp_font_detail_content_15sp" />

    <RatingBar
        android:id="@+id/rb_business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_spacing_8dp"
        android:layout_marginBottom="@dimen/dp_spacing_8dp"
        android:numStars="5"
        android:rating="3"
        android:stepSize="1"
        android:isIndicator="false"
        android:progressTint="#FFDD55"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_business_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_spacing_8dp"
        android:layout_gravity="center"
        android:text="3分"
        android:textColor="#FFDD55"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_view_line_2dp"
        android:background="@color/dividing_line" />


    <EditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_spacing_20dp"
        android:layout_marginBottom="@dimen/dp_spacing_8dp"
        android:paddingLeft="@dimen/dp_spacing_20dp"
        android:paddingRight="@dimen/dp_spacing_20dp"
        android:hint="写下您的评论"
        android:textSize="@dimen/sp_font_detail_content_14sp"
        android:maxLines="5"
        android:background="@null"/>



    <Button
        android:id="@+id/btn_ok"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="64dp"
        android:layout_gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:background="@drawable/tv_bg_blue"
        android:visibility="gone"/>

</LinearLayout>