    <LinearLayout
        android:id="@+id/ll_month"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/dp_spacing_10dp"
        android:layout_marginLeft="@dimen/dp_spacing_20dp"
        android:layout_marginRight="@dimen/dp_spacing_20dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/shape_ll_bg">

        <TextView
            android:id="@+id/tv_month_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_xl"
            android:textSize="@dimen/sp_font_detail_content_16sp"
            android:layout_marginLeft="@dimen/dp_spacing_20dp"/>

        <TextView
            android:id="@+id/tv_month_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_10dp"
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_14sp"
            android:layout_marginLeft="@dimen/dp_spacing_20dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_season"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/dp_spacing_10dp"
        android:layout_marginLeft="@dimen/dp_spacing_20dp"
        android:layout_marginRight="@dimen/dp_spacing_20dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
