<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_height_line_45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_radio"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dp_spacing_30dp"
            android:background="@mipmap/check_normal"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_str"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/dp_spacing_20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/bg_gray"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_20dp"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_font_detail_content_15sp"
            android:textColor="@color/text_black_l"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_spacing_30dp"
        android:layout_marginRight="@dimen/dp_spacing_30dp"
        android:background="@color/dividing_line"/>

</LinearLayout>