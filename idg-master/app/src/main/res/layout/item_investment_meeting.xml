<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_water"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_spacing_10dp"
        android:paddingLeft="@dimen/dp_spacing_15dp"
        android:paddingRight="@dimen/dp_spacing_15dp"
        android:paddingTop="@dimen/dp_spacing_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
        >


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_font_title_center_18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
        >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="4"
                android:text="日&#8194;&#8194;&#8194;&#8194;期 "
                android:textColor="@color/text_black_s"

            />

            <TextView
                android:id="@+id/item_one"
                style="@style/item_investment_project_three_contentStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="3.5"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="4"
                android:text="会议结论"
                android:textColor="@color/text_black_s"/>

            <TextView
                android:id="@+id/item_two"
                style="@style/item_investment_project_three_contentStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="3.5"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="4"
                android:text="维&#8194;护&#8194;人"
                android:textColor="@color/text_black_s"/>

            <TextView
                android:id="@+id/item_three"
                style="@style/item_investment_project_three_contentStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="3.5"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
        >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="4"
                android:text="审&#8194;批&#8194;人"
                android:textColor="@color/text_black_s"/>

            <TextView
                android:id="@+id/item_four"
                style="@style/item_investment_project_three_contentStyle"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="@dimen/dp15"
            />

            <TextView
                android:id="@+id/item_four2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:text="审批结果"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_font_detail_content_15sp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="4"
                android:text="会议详情"
                android:textColor="@color/text_black_s"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="3.5"
                android:gravity="left"
                android:text="点击查看"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_font_detail_content_15sp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
