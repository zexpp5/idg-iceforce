<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp10"
    >

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_to_left_right_15dp"
            android:layout_marginRight="@dimen/dp_spacing_to_left_right_15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/project"
                android:textColor="#666666"
                android:textSize="@dimen/sp_font_detail_content_15sp"/>

            <TextView
                android:id="@+id/one_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="8"
                android:singleLine="true"
                android:textColor="#333"
                android:textSize="@dimen/sp_font_detail_content_15sp"/>

            <TextView
                android:id="@+id/one_content_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#333"
                android:textSize="@dimen/sp_font_detail_content_15sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_to_left_right_15dp"
            android:layout_marginRight="@dimen/dp_spacing_to_left_right_15dp"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp5">

            <TextView
                android:id="@+id/two_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/abstracted"
                android:textColor="#666666"
                android:textSize="@dimen/sp_font_detail_content_15sp"/>

            <TextView
                android:id="@+id/two_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="#333"
                android:textSize="@dimen/sp_font_detail_content_15sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_to_left_right_15dp"
            android:layout_marginRight="@dimen/dp_spacing_to_left_right_15dp"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp5">

            <TextView
                android:id="@+id/three_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="发票金额："
                android:textColor="#666666"
                android:textSize="@dimen/sp_font_detail_content_15sp"/>

            <TextView
                android:id="@+id/three_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="#333"
                android:textSize="@dimen/sp_font_detail_content_15sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_to_left_right_15dp"
            android:layout_marginRight="@dimen/dp_spacing_to_left_right_15dp"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp5">

            <TextView
                android:id="@+id/four_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="RMB金额："
                android:textColor="#666666"
                android:textSize="@dimen/sp_font_detail_content_15sp"/>

            <TextView
                android:id="@+id/four_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="#333"
                android:textSize="@dimen/sp_font_detail_content_15sp"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/view01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d7d7"
    />

</LinearLayout>