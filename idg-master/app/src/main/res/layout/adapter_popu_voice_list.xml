<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_voice"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="@dimen/dp_spacing_4dp"
    android:background="@drawable/bg_voice_shape"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/dp_spacing_15dp"
        android:text="语音"
        android:textColor="@color/text_black_l" />

    <ImageView
        android:id="@+id/iv_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_spacing_15dp" />

    <TextView
        android:id="@+id/tv_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_spacing_4dp"
        android:layout_marginTop="@dimen/dp_spacing_4dp"
        android:textColor="@color/text_black_s"
        android:textSize="@dimen/sp_font_detail_content_11sp" />

</LinearLayout>