<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/dp_spacing_10dp"
              android:background="@drawable/shape_file_circle_5r"
              android:orientation="horizontal"

>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dp_spacing_10dp"
        android:layout_marginLeft="@dimen/dp_spacing_10dp"
        android:layout_marginRight="@dimen/dp_spacing_10dp"
        android:layout_marginTop="@dimen/dp_spacing_10dp"
        app:cardCornerRadius="@dimen/dp_spacing_25dp"
        app:cardElevation="3dp">

        <yunjing.view.DrawText
            android:id="@+id/draw_text"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:id="@+id/rl_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_spacing_to_left_20dp"
        android:layout_marginRight="@dimen/dp_spacing_to_right_20dp"
    >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_font_detail_content_15sp"/>
    </RelativeLayout>

</LinearLayout>