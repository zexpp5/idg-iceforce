<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_height_title_48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_spacing_10dp"
            android:background="@mipmap/icon_back_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_spacing_20dp"
            android:text="请假申请审批"
            android:textSize="@dimen/sp_font_detail_content_18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_spacing_20dp"
        android:layout_marginTop="@dimen/dp_spacing_20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请人："
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_14sp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_4dp"
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_spacing_20dp"
        android:layout_marginTop="@dimen/dp_spacing_20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="休假类型："
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_14sp"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_4dp"
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_spacing_20dp"
        android:layout_marginTop="@dimen/dp_spacing_20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始日期："
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_14sp"/>

        <TextView
            android:id="@+id/tv_sdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_4dp"
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_8dp"
            android:text="结束日期："
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_14sp"/>

        <TextView
            android:id="@+id/tv_edate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_4dp"
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_spacing_20dp"
        android:layout_marginTop="@dimen/dp_spacing_20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="休假天数："
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_14sp"/>

        <TextView
            android:id="@+id/tv_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_4dp"
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_spacing_20dp"
        android:layout_marginTop="@dimen/dp_spacing_20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假原因："
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_14sp"/>

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_4dp"
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_14sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_spacing_20dp"
        android:layout_marginTop="@dimen/dp_spacing_30dp"
        android:text="审批意见"
        android:textColor="@color/text_black_l"
        android:textSize="@dimen/sp_font_detail_content_14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_spacing_20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/ll_agree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_spacing_20dp"
            android:layout_marginRight="@dimen/dp_spacing_20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_ll_bg">

            <ImageView
                android:id="@+id/img_agree"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_spacing_10dp"
                android:layout_toLeftOf="@+id/tv_tongyi"
                android:background="@mipmap/public_commit_white"/>

            <TextView
                android:id="@+id/tv_tongyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:text="同意"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_font_detail_content_14sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_dis_agree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_spacing_20dp"
            android:layout_marginRight="@dimen/dp_spacing_20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_ll_bg">

            <ImageView
                android:id="@+id/img_dis_agree"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_spacing_10dp"
                android:layout_toLeftOf="@+id/tv_disagree"
                android:background="@mipmap/public_commit_white"/>

            <TextView
                android:id="@+id/tv_disagree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="不同意"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_font_detail_content_14sp"/>

        </RelativeLayout>

    </LinearLayout>

    <!--android:hint="如不同意，请输入审批意见"-->

    <tablayout.view.textview.FontEditext
        android:id="@+id/fet_comment"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="@dimen/dp_spacing_10dp"
        android:layout_marginLeft="@dimen/dp_spacing_20dp"
        android:layout_marginRight="@dimen/dp_spacing_20dp"
        android:layout_marginTop="@dimen/dp_spacing_20dp"
        android:background="@drawable/tv_bg_gray"
        android:gravity="top"
        android:padding="@dimen/dp_spacing_10dp"
        android:text="同意"
        android:textColor="@color/text_black_s"
        android:textSize="@dimen/sp_font_detail_content_14sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/dp_spacing_20dp"
        android:layout_marginRight="@dimen/dp_spacing_20dp"
        android:layout_marginTop="@dimen/dp_spacing_30dp"
        android:background="@drawable/shape_blue_btn_bg"
        android:text="确定并提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_font_detail_content_14sp"/>

</LinearLayout>