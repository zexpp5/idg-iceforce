<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_spacing_10dp"
            android:paddingLeft="@dimen/dp_spacing_20dp"
            android:paddingRight="@dimen/dp_spacing_20dp"
            android:textColor="@color/text_black_s"
            android:textSize="@dimen/sp_font_detail_content_15sp"/>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_view_line_2dp"
            android:layout_marginLeft="@dimen/dp_spacing_10dp"
            android:layout_marginRight="@dimen/dp_spacing_10dp"
            android:layout_marginTop="@dimen/dp_spacing_10dp"
            android:background="@color/bg_gray"/>

    </LinearLayout>

</LinearLayout>