<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@mipmap/schedule_time_icon"
            android:layout_margin="@dimen/dp_spacing_10dp"
            android:layout_centerVertical="true"
            android:id="@+id/image"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:id="@+id/announ_item_name_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/sp_font_detail_content_14sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerVertical="true"
            android:text="2017-12-12"
            android:id="@+id/item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#666666"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/announ_item_name_layout"
        android:id="@+id/item_time_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >

        <TextView
            android:textSize="@dimen/sp_font_detail_content_16sp"
            android:paddingRight="10dp"
            android:text="2017-12-12"
            android:textColor="#333333"
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:ellipsize="end"
        />

    </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"
        />



</LinearLayout>