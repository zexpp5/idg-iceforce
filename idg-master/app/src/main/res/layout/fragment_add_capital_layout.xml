<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <include
            android:id="@+id/department_title_layout"
            layout="@layout/top_title_layout" />




        <LinearLayout
            android:weightSum="2"
            style="@style/linear_row_style_common"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="名称：" />

                <tablayout.view.textview.FontEditext
                    android:id="@+id/add_capital_name_ed"
                    style="@style/font_edtext_content_sytle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLength="15"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="规格：" />

                <tablayout.view.textview.FontEditext
                    android:id="@+id/add_capital_spec_ed"
                    style="@style/font_edtext_content_sytle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:maxLength="15"
                    />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/bottom_line_view" />

        <LinearLayout
            android:weightSum="2"
            style="@style/linear_row_style_common"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="单位：" />

                <tablayout.view.textview.FontEditext
                    android:id="@+id/add_capital_unit_ed"
                    style="@style/font_edtext_content_sytle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLength="15"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="数量：" />

                <tablayout.view.textview.FontEditext
                    android:id="@+id/add_capital_quality_ed"
                    style="@style/font_edtext_content_sytle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:maxLength="15"
                    />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/bottom_line_view" />


        <LinearLayout
            android:weightSum="2"
            style="@style/linear_row_style_common"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="单价：" />

                <tablayout.view.textview.FontEditext
                    android:id="@+id/add_capital_price_ed"
                    style="@style/font_edtext_content_sytle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLength="15"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="金额：" />

                <tablayout.view.textview.FontEditext
                    android:id="@+id/add_capital_money_ed"
                    style="@style/font_edtext_content_sytle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:maxLength="15"
                    />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/bottom_line_view" />

    </LinearLayout>

    <include layout="@layout/bottom_space_view" />

</RelativeLayout>