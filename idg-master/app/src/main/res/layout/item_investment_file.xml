<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_water"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_spacing_10dp"
        android:paddingLeft="@dimen/dp_spacing_15dp"
        android:paddingRight="@dimen/dp_spacing_15dp"
        android:paddingTop="@dimen/dp_spacing_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
        >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_font_title_center_18sp"/>

            <RelativeLayout
                android:id="@+id/rl_read"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_progress"
                    style="@style/item_investment_project_three_contentStyle"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blue"
                    tools:text="点击查看"/>


            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
        >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上传日期"
                android:textColor="@color/text_black_s"/>

            <TextView
                android:id="@+id/item_one"
                style="@style/item_investment_project_three_contentStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="3.5"
                tools:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="文件说明"
                android:textColor="@color/text_black_s"/>

            <TextView
                android:id="@+id/item_two"
                style="@style/item_investment_project_three_contentStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="3.5"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="附件名称"
                android:textColor="@color/text_black_s"/>

            <TextView
                android:id="@+id/item_three"
                style="@style/item_investment_project_three_contentStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="3.5"
                tools:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
        >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上&#8194;传&#8194;人"
                android:textColor="@color/text_black_s"/>

            <TextView
                android:id="@+id/item_four"
                style="@style/item_investment_project_three_contentStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="3.5"
                tools:text=""/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
