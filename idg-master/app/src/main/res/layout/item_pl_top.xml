<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/project_list_layoutStyle"
    android:background="@color/color_home_page_item_infor_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_topTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_personal_records_top_title"
            android:textSize="@dimen/sp_font_personal_records_15sp"
            tools:text="2017-10-25" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_view_line_1dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_view_line_1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray" />
</RelativeLayout>