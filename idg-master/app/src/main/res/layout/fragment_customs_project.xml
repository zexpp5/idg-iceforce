<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/top_title_layout" />

        <LinearLayout
            style="@style/linear_row_style_common"
            android:orientation="horizontal">


            <tablayout.view.textview.FontTextView
                style="@style/font_text_content_sytle"
                android:text="项目名称：" />

            <tablayout.view.textview.FontEditext
                android:id="@+id/customs_project_title_ed"
                style="@style/font_edtext_content_sytle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <include layout="@layout/bottom_line_view" />

        <LinearLayout
            android:weightSum="2"
            style="@style/linear_row_style_common"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="项目金额：" />

                <tablayout.view.textview.FontEditext
                    android:id="@+id/customs_project_money_ed"
                    style="@style/font_edtext_content_sytle"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="项目说明：" />

                <tablayout.view.textview.FontEditext
                    android:id="@+id/customs_project_explain_ed"
                    style="@style/font_edtext_content_sytle"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            </LinearLayout>

        <include layout="@layout/bottom_line_view" />

        <LinearLayout
            style="@style/linear_row_style_common"
            android:orientation="horizontal">


            <tablayout.view.textview.FontTextView
                style="@style/font_text_content_sytle"
                android:text="客户名称：" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/customs_project_name_ed"
                style="@style/font_select_textview_content_sytle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <include layout="@layout/bottom_line_view" />

        <LinearLayout
            android:weightSum="2"
            style="@style/linear_row_style_common"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="联  系  人：" />

                <tablayout.view.textview.FontTextView
                    android:id="@+id/customs_project_contacts_ed"
                    style="@style/font_text_content_sytle"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="联系方式：" />

                <tablayout.view.textview.FontEditext
                    android:id="@+id/customs_project_contacts_method"
                    style="@style/font_edtext_content_sytle"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/bottom_line_view" />

    </LinearLayout>

    <include
        android:id="@+id/share_icon_list_id"
        style="@style/list_ShareLayout_Style"
        layout="@layout/list_share_layout"/>


</RelativeLayout>