<?xml version="1.0" encoding="utf-8"?>
<com.superdata.marketing.view.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    >

        <com.superdata.marketing.view.percent.PercentLinearLayout
            android:id="@+id/button_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
        >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_avatar"
                android:layout_width="55dp"
                android:layout_height="55dp"
            />

            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLength="4"
                android:singleLine="true"
                android:text="加载中载中载中."
                android:textSize="13sp"
            />
        </com.superdata.marketing.view.percent.PercentLinearLayout>

        <ImageView
            android:id="@+id/badge_delete"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignRight="@+id/button_avatar"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/appitem_del_btn"/>

    </RelativeLayout>

</com.superdata.marketing.view.percent.PercentRelativeLayout>