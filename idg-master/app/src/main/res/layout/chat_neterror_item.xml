<?xml version="1.0" encoding="utf-8"?>
<com.superdata.marketing.view.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_error_item_bg"
    android:clickable="true"
    android:orientation="vertical">

    <com.superdata.marketing.view.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
    >

        <ImageView
            android:id="@+id/iv_neterror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/login_error_icon"
            app:layout_heightPercent="7%w"
            app:layout_marginBottomPercent="2%w"
            app:layout_marginLeftPercent="3.5%w"
            app:layout_marginTopPercent="2%w"
            app:layout_widthPercent="7%w"
        />
        <tablayout.view.textview.FontTextView
            android:id="@+id/tv_connect_errormsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_neterror"
            android:text="不能连接到服务器"
            android:textColor="#000"
            app:layout_marginLeftPercent="3.5%w"
            app:layout_textSizePercent="3.5%w"
        />
    </com.superdata.marketing.view.percent.PercentLinearLayout>
    <!--  <tablayout.view.textview.FontTextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="查看详情"
         android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
         android:background="@drawable/ic_preference_single_normal"
         android:textColor="#000"
         /> -->


</com.superdata.marketing.view.percent.PercentRelativeLayout>