<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:orientation="vertical">

    <!--android:background="#33000000"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="35dp"
        android:background="@null"
        android:orientation="vertical"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:text="2019年IDG资本新年晚会"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_font_detail_content_25sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/imageView100"
                android:layout_width="237dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_annual_line2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
            >

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="活动时间:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_font_detail_content_15sp"/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_time_title_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="2019年1月16日 (周 三) 18:30"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_font_detail_content_15sp"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/imageView101"
                android:layout_width="161dp"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_annual_line2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
            >

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="活动地点:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_font_detail_content_15sp"/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_address_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="北京市朝阳区呼家楼京广中心"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_font_detail_content_15sp"/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_address_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="北京瑰丽酒店二层大宴会厅"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_font_detail_content_15sp"/>

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/imageView102"
                android:layout_width="161dp"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_annual_line2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
            >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <tablayout.view.textview.FontTextView
                        android:id="@+id/tv_process_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="活动地点:"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_font_detail_content_15sp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <tablayout.view.textview.FontTextView
                        android:id="@+id/tv_process_01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:text="18:30-19:30    冷餐会"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_font_detail_content_15sp"/>
                    <tablayout.view.textview.FontTextView
                        android:id="@+id/tv_process_02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="19:30-20:50    IDG员工 talent show"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_font_detail_content_15sp"/>
                    <tablayout.view.textview.FontTextView
                        android:id="@+id/tv_process_03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="20:50-21:30    iStar唱将大比拼"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_font_detail_content_15sp"/>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
