<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_spacing_4dp"
        android:layout_marginBottom="@dimen/dp_spacing_4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_radio"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@mipmap/check_normal" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_spacing_8dp"
            android:layout_marginLeft="@dimen/dp_spacing_8dp"
            android:layout_marginTop="@dimen/dp_spacing_8dp"
            android:textColor="@color/text_black_l"
            android:textSize="@dimen/sp_font_detail_content_14sp" />

        <newProject.company.project_manager.investment_project.utils.SeekButtonGroupView
            android:id="@+id/sgv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_spacing_4dp" />

        <newProject.company.project_manager.investment_project.utils.SeekButtonGroupView
            android:id="@+id/sgv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_spacing_30dp" />


        <com.view.SwitchView
            android:id="@+id/sv_toggle"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_spacing_4dp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_spacing_8dp"
            android:layout_marginTop="@dimen/dp_spacing_8dp"
            android:layout_marginLeft="@dimen/dp_spacing_4dp"
            android:text="不跟进"
            android:textColor="@color/text_black_l"
            android:textSize="@dimen/sp_font_detail_content_14sp"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividing_line" />

</LinearLayout>