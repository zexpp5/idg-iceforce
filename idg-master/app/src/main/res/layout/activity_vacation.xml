<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <include
            android:id="@+id/top_bar_layout"
            layout="@layout/top_title_layout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_spacing_10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="你你你"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
            />

            <ImageView
                android:id="@+id/head_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@mipmap/renshi_head"
                android:scaleType="fitXY"
            />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_spacing_10dp"
                android:orientation="horizontal"
                android:weightSum="3"
            >

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/item_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                >

                    <ImageView
                        android:id="@+id/item_one_image"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/vacation_icon"
                    />

                    <tablayout.view.textview.FontTextView
                        android:id="@+id/unread_msg_number_work_one"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="-12dp"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/item_one_image"
                        android:background="@mipmap/icon_num"
                        android:gravity="center"
                        android:text="15"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:visibility="gone"
                    />

                    <TextView
                        android:id="@+id/item_one_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_one_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_spacing_5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="我的休假"
                        android:textColor="#333333"
                        android:textSize="15sp"

                    />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/item_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                >

                    <ImageView
                        android:id="@+id/item_two_image"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/vacation_apply_two_icon"
                    />

                    <tablayout.view.textview.FontTextView
                        android:id="@+id/unread_msg_number_work_two"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="-12dp"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/item_two_image"
                        android:background="@mipmap/icon_num"
                        android:gravity="center"
                        android:text="15"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:visibility="gone"
                    />
                    <TextView
                        android:id="@+id/item_two_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_two_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_spacing_5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="休假申请"
                        android:textColor="#333333"
                        android:textSize="15sp"

                    />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/item_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                >

                    <ImageView
                        android:id="@+id/item_three_image"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/vacation_rule"
                    />
                    <tablayout.view.textview.FontTextView
                        android:id="@+id/unread_msg_number_work_three"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="-12dp"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/item_three_image"
                        android:background="@mipmap/icon_num"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:visibility="gone"
                    />

                    <TextView
                        android:id="@+id/item_three_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_three_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_spacing_5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="休假制度"
                        android:textColor="#333333"
                        android:textSize="15sp"

                    />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/item_four"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/item_four_image"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/travel_icon"
                        />

                    <tablayout.view.textview.FontTextView
                        android:id="@+id/unread_msg_number_work_four"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="-12dp"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/item_four_image"
                        android:background="@mipmap/icon_num"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:visibility="gone"
                        />


                    <TextView
                        android:id="@+id/item_four_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_four_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_spacing_5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="差旅制度"
                        android:textColor="#333333"
                        android:textSize="15sp"

                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/item_five"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/item_five_image"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/icon_news"
                        />

                    <tablayout.view.textview.FontTextView
                        android:id="@+id/unread_msg_number_work_five"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="-12dp"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/item_five_image"
                        android:background="@mipmap/icon_num"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:visibility="gone"
                        />


                    <TextView
                        android:id="@+id/item_five_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_five_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_spacing_5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="消息"
                        android:textColor="#333333"
                        android:textSize="15sp"

                        />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_spacing_10dp"
                android:orientation="horizontal"
                android:weightSum="3"
            >





            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
        >
            <View
                android:id="@+id/bottom_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_spacing_10dp"
                android:layout_marginRight="@dimen/dp_spacing_10dp"
                android:background="#DDDDDD"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/apply_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>