<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include
        android:id="@+id/top_bar_layout"
        layout="@layout/top_title_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_spacing_15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_8dp"
                        android:layout_marginTop="@dimen/dp_spacing_8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="行业小组"
                        android:textColor="@color/text_black_s"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_8dp"
                        android:layout_marginTop="@dimen/dp_spacing_8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="项目负责人"
                        android:textColor="@color/text_black_s"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_8dp"
                        android:layout_marginTop="@dimen/dp_spacing_8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="小组成员"
                        android:textColor="@color/text_black_s"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_indusGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_8dp"
                        android:layout_marginTop="@dimen/dp_spacing_8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/top_bg"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                    <TextView
                        android:id="@+id/tv_projManagerNames"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_8dp"
                        android:layout_marginTop="@dimen/dp_spacing_8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/top_bg"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                    <TextView
                        android:id="@+id/tv_projTeamNames"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_8dp"
                        android:layout_marginTop="@dimen/dp_spacing_8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/top_bg"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_spacing_10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_8dp"
                        android:layout_marginTop="@dimen/dp_spacing_8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="拟投金额"
                        android:textColor="@color/text_black_s"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_8dp"
                        android:layout_marginTop="@dimen/dp_spacing_8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="项目状态"
                        android:textColor="@color/text_black_s"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_8dp"
                        android:layout_marginTop="@dimen/dp_spacing_8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/text_black_s"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_invAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_8dp"
                        android:layout_marginTop="@dimen/dp_spacing_8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/top_bg"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                    <TextView
                        android:id="@+id/tv_subStsIdStr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_8dp"
                        android:layout_marginTop="@dimen/dp_spacing_8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/top_bg"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_8dp"
                        android:layout_marginTop="@dimen/dp_spacing_8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/top_bg"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_view_line_2dp"
                android:background="@color/dividing_line"/>

            <LinearLayout
                android:id="@+id/ll_water1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_spacing_10dp"
                    android:paddingLeft="@dimen/dp_spacing_20dp"
                    android:paddingTop="@dimen/dp_spacing_10dp"
                    android:text="项目介绍"
                    android:textSize="@dimen/sp_font_detail_content_15sp"/>

                <TextView
                    android:id="@+id/tv_zhDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_spacing_10dp"
                    android:paddingLeft="@dimen/dp_spacing_20dp"
                    android:paddingRight="@dimen/dp_spacing_10dp"
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_view_line_2dp"
                android:background="@color/dividing_line"/>


            <LinearLayout
                android:id="@+id/ll_water2"
                android:layout_width="match_parent"
                android:layout_marginBottom="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_spacing_10dp"
                    android:paddingLeft="@dimen/dp_spacing_20dp"
                    android:paddingTop="@dimen/dp_spacing_10dp"
                    android:text="跟踪进展"
                    android:textSize="@dimen/sp_font_detail_content_15sp"/>

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_spacing_8dp"
                    android:paddingTop="@dimen/dp_spacing_8dp">

                    <TextView
                        android:id="@+id/tv_fp_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingLeft="@dimen/dp_spacing_20dp"
                        android:paddingRight="@dimen/dp_spacing_4dp"
                        android:textColor="@color/text_black_s"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                    <LinearLayout
                        android:id="@+id/ll_voice_one"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/chatfrom_bg"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_fp_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/play_annex_voice"/>

                        <TextView
                            android:id="@+id/tv_second_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_spacing_4dp"
                            android:layout_marginTop="@dimen/dp_spacing_4dp"
                            android:textColor="@color/text_black_s"
                            android:textSize="@dimen/sp_font_detail_content_11sp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line"/>

                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_spacing_8dp"
                    android:paddingTop="@dimen/dp_spacing_8dp">

                    <TextView
                        android:id="@+id/tv_fp_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingLeft="@dimen/dp_spacing_20dp"
                        android:paddingRight="@dimen/dp_spacing_4dp"
                        android:textColor="@color/text_black_s"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                    <LinearLayout
                        android:id="@+id/ll_voice_two"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/chatfrom_bg"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_fp_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/play_annex_voice"/>
                        <TextView
                            android:id="@+id/tv_second_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_spacing_4dp"
                            android:layout_marginTop="@dimen/dp_spacing_4dp"
                            android:textColor="@color/text_black_s"
                            android:textSize="@dimen/sp_font_detail_content_11sp"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line"/>

                <LinearLayout
                    android:id="@+id/ll_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_spacing_8dp"
                    android:paddingTop="@dimen/dp_spacing_8dp">

                    <TextView
                        android:id="@+id/tv_fp_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingLeft="@dimen/dp_spacing_20dp"
                        android:paddingRight="@dimen/dp_spacing_4dp"
                        android:textColor="@color/text_black_s"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                    <LinearLayout
                        android:id="@+id/ll_voice_three"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/chatfrom_bg"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_fp_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/play_annex_voice"/>

                        <TextView
                            android:id="@+id/tv_second_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_spacing_4dp"
                            android:layout_marginTop="@dimen/dp_spacing_4dp"
                            android:textColor="@color/text_black_s"
                            android:textSize="@dimen/sp_font_detail_content_11sp"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/btn_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingBottom="@dimen/dp_spacing_10dp"
                    android:paddingTop="@dimen/dp_spacing_10dp"
                    android:text="查看更多"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_view_line_2dp"
                    android:background="@color/dividing_line"/>

                <RelativeLayout
                    android:id="@+id/rl_meeting"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_height_title_48dp"
                    android:layout_marginTop="@dimen/dp_spacing_4dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dp_spacing_20dp"
                        android:text="会议讨论"
                        android:textColor="@color/text_black_s"
                        android:textSize="@dimen/sp_font_detail_content_15sp"/>

                    <ImageView
                        android:id="@+id/iv_meeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_spacing_8dp"
                        android:background="@mipmap/icon_right_arrow_tip"/>

                    <TextView
                        android:id="@+id/tv_meeting_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_spacing_8dp"
                        android:layout_toLeftOf="@id/iv_meeting"
                        android:textColor="@color/text_black_sl"
                        android:textSize="@dimen/sp_font_detail_content_12sp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line"/>

                <RelativeLayout
                    android:id="@+id/rl_files"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_height_title_48dp"
                    android:layout_marginTop="@dimen/dp_spacing_4dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dp_spacing_20dp"
                        android:text="相关附件"
                        android:textColor="@color/text_black_s"
                        android:textSize="@dimen/sp_font_detail_content_15sp"/>

                    <ImageView
                        android:id="@+id/iv_files"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_spacing_8dp"
                        android:background="@mipmap/icon_right_arrow_tip"/>

                    <TextView
                        android:id="@+id/tv_files_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_spacing_8dp"
                        android:layout_toLeftOf="@id/iv_files"
                        android:textColor="@color/text_black_sl"
                        android:textSize="@dimen/sp_font_detail_content_12sp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line"/>

                <RelativeLayout
                    android:id="@+id/rl_score_record"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_height_title_48dp"
                    android:layout_marginTop="@dimen/dp_view_line_1dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dp_spacing_20dp"
                        android:text="项目评分"
                        android:textColor="@color/text_black_s"
                        android:textSize="@dimen/sp_font_detail_content_15sp"/>

                    <ImageView
                        android:id="@+id/iv_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_spacing_8dp"
                        android:background="@mipmap/icon_right_arrow_tip"/>

                    <TextView
                        android:id="@+id/tv_score_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_spacing_8dp"
                        android:layout_toLeftOf="@id/iv_score"
                        android:text=""
                        android:textColor="@color/text_black_sl"
                        android:textSize="@dimen/sp_font_detail_content_12sp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/dividing_line"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_height_line_45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_star"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:background="@color/top_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_star"
                android:layout_width="15dp"
                android:layout_height="15dp"/>

            <TextView
                android:id="@+id/tv_star_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_view_line_1dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/top_bg"
            android:text="新增跟踪进展"
            android:textColor="@color/white"/>

        <View
            android:layout_width="@dimen/dp_view_line_1dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/top_bg"
            android:text="上传文档"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <View
            android:layout_width="@dimen/dp_view_line_1dp"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_change"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/top_bg"
            android:text="变更项目状态"
            android:textColor="@color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_project_state"
        android:layout_width="240dp"
        android:layout_height="32dp"
        android:layout_above="@id/ll_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_spacing_8dp"
        android:background="@drawable/tv_bg_blue"
        android:gravity="center"
        android:textColor="@color/white"/>

</RelativeLayout>