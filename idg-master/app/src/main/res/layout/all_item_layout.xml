<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/dp_spacing_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_one"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/one_title"
            android:text="标题一:  "
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/sp_font_detail_content_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/one_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="标题标题一: 标题一标题一: 标题一: 标题一: 标一: "
            android:textSize="@dimen/sp_font_detail_content_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_marginTop="@dimen/dp_spacing_5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/two_title"
            android:text="标题一:  "
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/sp_font_detail_content_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/two_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="标题标题一: 标题一标题一: 标题一: 标题一: 标一: "
            android:textSize="@dimen/sp_font_detail_content_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_three"
        android:layout_marginTop="@dimen/dp_spacing_5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/three_title"
            android:text="标题一:  "
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/sp_font_detail_content_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/three_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="标题标题一: 标题一标题一: 标题一: 标题一: 标一: "
            android:textSize="@dimen/sp_font_detail_content_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"
        />

</LinearLayout>