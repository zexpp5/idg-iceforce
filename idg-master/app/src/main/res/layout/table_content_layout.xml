<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/right_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/right_content_text"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/blackThree"
            android:textSize="@dimen/sp_font_detail_content_14sp"
            android:text="你看的得到的呢低等动物无无无为三生三世对对对" />

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/right_content_image"
            android:layout_height="20dp"
            android:layout_width="20dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="@dimen/dp_view_line_1dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_view_line_1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray" />
</RelativeLayout>
