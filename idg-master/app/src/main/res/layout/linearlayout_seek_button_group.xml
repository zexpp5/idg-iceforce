<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tv_reduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_spacing_10dp"
        android:paddingRight="@dimen/dp_spacing_10dp"
        android:layout_gravity="center"
        android:text="-"/>

    <EditText
        android:id="@+id/et_number"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_spacing_6dp"
        android:paddingRight="@dimen/dp_spacing_6dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="5"
        android:inputType="number"
        android:background="@drawable/tv_bg_gray"/>

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_spacing_10dp"
        android:paddingLeft="@dimen/dp_spacing_10dp"
        android:layout_gravity="center"
        android:text="+"/>

</LinearLayout>