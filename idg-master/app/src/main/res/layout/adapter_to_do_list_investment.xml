<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_height_title_48dp"
        android:layout_marginLeft="@dimen/dp_spacing_to_left_10dp"
        android:layout_marginRight="@dimen/dp_spacing_to_right_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_spacing_8dp"
            android:paddingRight="@dimen/dp_spacing_8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/shape_tv_bg"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_10dp"
            android:layout_gravity="center"
            android:textColor="@color/blue"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_spacing_to_left_20dp"
        android:layout_marginRight="@dimen/dp_spacing_to_right_20dp"
        android:background="@color/dividing_line" />

</LinearLayout>