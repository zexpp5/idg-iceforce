<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:id="@+id/email_item_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginTop="@dimen/dp_spacing_12dp"
            android:id="@+id/email_item_iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_spacing_10dp" />

        <LinearLayout
            android:id="@+id/leave_work_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/item_time_layout"
            android:layout_toRightOf="@+id/email_item_iamge"
            android:orientation="vertical">

            <TextView
                android:id="@+id/email_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text=""
                android:textSize="@dimen/sp_font_detail_content_15sp" />

            <TextView
                android:id="@+id/email_below_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#666666"
                android:textSize="@dimen/sp_font_detail_content_14sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/item_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/email_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="2017-04-12"
                android:textSize="@dimen/sp_font_detail_content_14sp" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/email_item_time_below_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:text="04-12"
                android:textSize="@dimen/sp_font_detail_content_14sp" />

        </LinearLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"
        />



</LinearLayout>