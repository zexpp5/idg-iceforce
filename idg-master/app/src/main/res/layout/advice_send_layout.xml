<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cx="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/super_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <com.superdata.marketing.view.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <tablayout.view.TextAndEditView
            android:id="@+id/tad_createtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cx:name="建议时间" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dividing_line" />

        <tablayout.view.TextAndEditView
            android:id="@+id/tad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cx:name="建议标题" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dividing_line" />

        <tablayout.view.TextAndEditView
            android:id="@+id/tad_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cx:max_Length="200"
            cx:name="建议内容" />
    </com.superdata.marketing.view.percent.PercentLinearLayout>
</LinearLayout>