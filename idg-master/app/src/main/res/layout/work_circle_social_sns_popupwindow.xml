<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/demo_social_sns_bg"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/agreeBtn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/agree"
        android:gravity="center"
        android:text="同意"
        android:textColor="#d2d2d2"/>
    <View
        android:id="@+id/view_01"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="#707070"
    />

    <TextView
        android:id="@+id/disagreeBtn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/disagree"
        android:gravity="center"
        android:text="不同意"
        android:textColor="#d2d2d2"/>

    <View
        android:id="@+id/view_02"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="#707070"
    />

    <TextView
        android:id="@+id/commentBtn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/icon_idea"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="意见"
        android:textColor="#d2d2d2"/>
</LinearLayout>
