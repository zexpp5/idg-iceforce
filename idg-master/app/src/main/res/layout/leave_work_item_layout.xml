<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/leave_work_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/item_time_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/leave_work_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text=""
                android:textSize="@dimen/sp_item_title_sp" />

            <TextView
                android:id="@+id/work_below_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="公司文件"
                android:textColor="#666666"
                android:textSize="@dimen/sp_item_time_sp"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/item_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/work_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text=""
                android:textSize="@dimen/sp_item_time_sp" />

            <TextView
                android:id="@+id/work_item_time_below_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/sp_item_time_sp"
                android:visibility="invisible" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"
        />

</LinearLayout>