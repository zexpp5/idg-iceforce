<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/top_bar_layout"
        layout="@layout/top_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            style="@style/linear_row_style_common"
            android:orientation="horizontal">


            <tablayout.view.textview.FontTextView
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="日期"
                android:textColor="@color/text_black_s" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/time"
                style="@style/font_select_textview_content_sytle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_black_xl" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <include
                layout="@layout/bottom_line_view"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_view_line_1dp"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            style="@style/linear_row_style_common"
            android:orientation="horizontal">


            <tablayout.view.textview.FontTextView
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="与会者"
                android:textColor="@color/text_black_s" />

            <tablayout.view.textview.FontEditext
                android:id="@+id/follow_man"
                style="@style/font_edtext_content_sytle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_black_xl" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <include
                layout="@layout/bottom_line_view"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_view_line_1dp"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            style="@style/linear_row_style_common"
            android:orientation="horizontal">


            <tablayout.view.textview.FontTextView
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="跟进状态"
                android:textColor="@color/text_black_s" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/follow_state"
                style="@style/font_select_textview_content_sytle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#333" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <include
                layout="@layout/bottom_line_view"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_view_line_1dp"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout style="@style/linear_row_style_common">


            <tablayout.view.textview.FontTextView
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Keynote"
                android:textColor="@color/text_black_s" />

            <tablayout.view.textview.FontEditext
                android:id="@+id/keynote"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLength="255"
                android:textColor="@color/text_black_xl"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <include
                layout="@layout/bottom_line_view"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_view_line_1dp"
                android:layout_weight="2" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
