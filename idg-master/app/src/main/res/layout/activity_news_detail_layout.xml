<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f2f1f7"
                android:orientation="vertical"
>
    <include
        android:id="@+id/department_title_layout"
        layout="@layout/public_title_01"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_btn_ll"
        android:layout_below="@+id/department_title_layout"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
        >

            <LinearLayout
                style="@style/linear_row_style_common"
                android:orientation="horizontal">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="申  请  人："/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_user"
                    style="@style/font_edtext_content_sytle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>
            </LinearLayout>

            <include layout="@layout/bottom_line_view"/>

            <LinearLayout
                style="@style/linear_row_style_common"
                android:orientation="horizontal"
            >

                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="申请日期："/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_create_time"
                    style="@style/font_edtext_content_sytle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>
            </LinearLayout>

            <include layout="@layout/bottom_line_view"/>

            <LinearLayout
                style="@style/linear_row_style_common"
                android:orientation="horizontal">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="休假类型："/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_type"
                    style="@style/font_edtext_content_sytle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>
            </LinearLayout>


            <include layout="@layout/bottom_line_view"/>


            <LinearLayout
                style="@style/linear_row_style_common"
                android:orientation="horizontal">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="开始时间："/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_start_time"
                    style="@style/font_select_textview_content_sytle_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>
            </LinearLayout>

            <include layout="@layout/bottom_line_view"/>

            <LinearLayout
                style="@style/linear_row_style_common"
                android:orientation="horizontal">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="结束时间："/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_end_time"
                    style="@style/font_select_textview_content_sytle_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>
            </LinearLayout>

            <!-- <include layout_city="@layout_city/bottom_line_view" />-->

            <include layout="@layout/bottom_line_view"/>


            <LinearLayout
                style="@style/linear_row_style_common"
                android:orientation="horizontal">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="时        长："/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_use_time"
                    style="@style/font_select_textview_content_sytle_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"/>
            </LinearLayout>

            <include layout="@layout/bottom_line_view"/>

            <LinearLayout
                style="@style/file_center_explain_style"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:layout_gravity="top"
                    android:layout_marginTop="8dp"
                    android:text="请假原因："/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_reason"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:gravity="top"
                    android:maxLength="200"
                    android:textSize="@dimen/sp_font_detail_content_15sp"/>
            </LinearLayout>
            <include layout="@layout/bottom_line_view"/>

            <LinearLayout
                style="@style/file_center_explain_style"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:layout_gravity="top"
                    android:layout_marginTop="8dp"
                    android:text="备        注："/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_remark_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:gravity="top"
                    android:maxLength="200"
                    android:textSize="@dimen/sp_font_detail_content_15sp"/>
            </LinearLayout>


            <include layout="@layout/bottom_line_view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f2f1f7"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_spacing_5dp"
                android:paddingTop="@dimen/dp_spacing_20dp"
                android:visibility="gone">

                <include layout="@layout/bottom_line_view"/>

                <include layout="@layout/public_annex_layout"/>

                <include layout="@layout/bottom_line_view"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <include
        android:id="@+id/add_btn_ll"
        layout="@layout/public_add_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>
