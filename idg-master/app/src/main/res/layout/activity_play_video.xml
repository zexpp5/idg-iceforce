<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/black">

    <com.cxgz.activity.cxim.camera.main.MyScalableVideoView
        android:id="@+id/video_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onClick"
        app:scalableType="fitCenter"/>
    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_num"
        android:layout_gravity="right|top"
        android:layout_margin="@dimen/dp5"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/thumbnailImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:scaleType="fitCenter"
    />

    <ImageView
        android:id="@+id/playImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:scaleType="centerInside"
        android:src="@mipmap/video_play"
    />
    <tablayout.view.textview.FontTextView
        android:id="@+id/file_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_play_vedio_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:paddingTop="10dp"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="14sp"
    />

</FrameLayout>