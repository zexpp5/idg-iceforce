<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_spacing_15dp"
        android:paddingBottom="@dimen/dp_spacing_15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_industry_popup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_30dp"
            android:layout_marginRight="@dimen/dp_spacing_15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_industry_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_spacing_5dp"
                android:gravity="center"
                android:text="所属行业"
                android:textColor="@color/blue"/>

            <View
                android:id="@+id/view_industry_popup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_view_line_2dp"
                android:background="@color/blue"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_important_institution"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_15dp"
            android:layout_marginRight="@dimen/dp_spacing_30dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_important_institution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_spacing_5dp"
                android:gravity="center"
                android:text="重要机构"
                android:textColor="@color/text_black_l"/>

            <View
                android:id="@+id/view_important_institution"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_view_line_2dp"
                android:background="@color/blue"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_indus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_spacing_10dp"
        android:paddingLeft="@dimen/dp_spacing_20dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_spacing_10dp"
        android:paddingLeft="@dimen/dp_spacing_20dp"
        android:text="细分行业"
        android:textSize="@dimen/sp_font_detail_content_14sp"
        android:textColor="@color/text_black_l"
        android:background="@color/white"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_spacing_20dp"
        android:paddingBottom="@dimen/dp_spacing_30dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:background="@color/white"/>

</LinearLayout>