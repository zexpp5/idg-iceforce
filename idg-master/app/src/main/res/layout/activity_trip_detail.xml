<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f2f1f7"
              android:orientation="vertical"
>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_btn_ll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vacation_title_layout"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_height_title_48dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_spacing_10dp"
                    android:background="@mipmap/icon_back_black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_spacing_20dp"
                    android:text="差旅申请审批"
                    android:textSize="@dimen/sp_font_detail_content_18sp"/>

            </LinearLayout>

            <LinearLayout
                style="@style/style_approval_detail_ll"
                android:orientation="horizontal">

                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:layout_centerVertical="true"
                    android:text="@string/str_apply_p"
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_person"
                    style="@style/font_select_textview_content_sytle_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

            </LinearLayout>


            <RelativeLayout
                style="@style/style_approval_detail_ll"
                android:orientation="horizontal">

                <tablayout.view.textview.FontTextView
                    android:id="@+id/text_type_01"
                    style="@style/font_text_content_sytle"
                    android:layout_centerVertical="true"
                    android:text="出差类型："
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_trip_type"
                    style="@style/font_select_textview_content_sytle_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textView_type_01"
                    android:layout_toRightOf="@+id/text_type_01"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

            </RelativeLayout>

            <LinearLayout
                style="@style/style_approval_detail_ll"
                android:orientation="horizontal">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="出发城市："
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_start_from_city"
                    style="@style/font_select_textview_content_sytle_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>
            </LinearLayout>

            <LinearLayout
                style="@style/style_approval_detail_ll"
                android:orientation="horizontal">

                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="目的城市："
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_objective_city"
                    style="@style/font_select_textview_content_sytle_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>
            </LinearLayout>

            <RelativeLayout
                style="@style/style_approval_detail_ll"
                android:orientation="horizontal">

                <tablayout.view.textview.FontTextView
                    android:id="@+id/start_text"
                    style="@style/font_text_content_sytle"
                    android:layout_centerVertical="true"
                    android:text="出发日期："
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_start_time"
                    style="@style/font_select_textview_content_sytle_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/textView_time_01"
                    android:layout_toRightOf="@+id/start_text"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

            </RelativeLayout>

            <RelativeLayout
                style="@style/style_approval_detail_ll"
                android:orientation="horizontal">

                <tablayout.view.textview.FontTextView
                    android:id="@+id/end_text"
                    style="@style/font_text_content_sytle"
                    android:layout_centerVertical="true"
                    android:text="结束日期："
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/tv_end_time"
                    style="@style/font_select_textview_content_sytle_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/textView_time_02"
                    android:layout_toRightOf="@+id/end_text"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

            </RelativeLayout>

            <RelativeLayout
                style="@style/style_approval_detail_ll"
                android:orientation="horizontal">

                <tablayout.view.textview.FontTextView
                    android:id="@+id/textView01"
                    style="@style/font_text_content_sytle"
                    android:layout_centerVertical="true"
                    android:text="预计费用："
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/et_trip_money"
                    style="@style/font_select_textview_content_sytle_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/textView02"
                    android:layout_toRightOf="@+id/textView01"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/textView02"
                    style="@style/font_text_content_sytle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="元"
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>
            </RelativeLayout>

            <LinearLayout
                style="@style/style_approval_detail_ll"
                android:gravity="center"
                android:orientation="horizontal">


                <tablayout.view.textview.FontTextView
                    style="@style/font_text_content_sytle"
                    android:text="@string/remarks2"
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>

                <tablayout.view.textview.FontTextView
                    android:id="@+id/et_trip_remark"
                    style="@style/font_select_textview_content_sytle_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/text_black_s"
                    android:textSize="@dimen/sp_font_detail_content_14sp"
                />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_spacing_30dp"
                android:layout_marginTop="@dimen/dp_spacing_30dp"
                android:text="审批意见"
                android:textColor="@color/text_black_l"
                android:textSize="@dimen/sp_font_detail_content_14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/dp_spacing_20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/ll_agree"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_spacing_20dp"
                    android:layout_marginRight="@dimen/dp_spacing_20dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_ll_bg">

                    <ImageView
                        android:id="@+id/img_agree"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_spacing_10dp"
                        android:layout_toLeftOf="@+id/tv_tongyi"
                        android:background="@mipmap/public_commit_white"/>

                    <TextView
                        android:id="@+id/tv_tongyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:text="同意"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_dis_agree"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_spacing_20dp"
                    android:layout_marginRight="@dimen/dp_spacing_20dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_ll_bg">

                    <ImageView
                        android:id="@+id/img_dis_agree"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_spacing_10dp"
                        android:layout_toLeftOf="@+id/tv_disagree"
                        android:background="@mipmap/public_commit_white"/>

                    <TextView
                        android:id="@+id/tv_disagree"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="不同意"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_font_detail_content_14sp"/>

                </RelativeLayout>


            </LinearLayout>


            <tablayout.view.textview.FontEditext
                android:id="@+id/fet_comment"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="@dimen/dp_spacing_10dp"
                android:layout_marginLeft="@dimen/dp_spacing_30dp"
                android:layout_marginRight="@dimen/dp_spacing_30dp"
                android:layout_marginTop="@dimen/dp_spacing_20dp"
                android:background="@drawable/tv_bg_gray"
                android:gravity="top"
                android:visibility="gone"
                android:hint="如不同意，请输入审批意见"
                android:padding="@dimen/dp_spacing_10dp"
                android:textColor="@color/text_black_s"
                android:textSize="@dimen/sp_font_detail_content_14sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_spacing_30dp"
                android:layout_marginTop="@dimen/dp_spacing_30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/dp_spacing_30dp"
                    android:layout_marginRight="@dimen/dp_spacing_30dp"
                    android:background="@drawable/shape_blue_btn_bg"
                    android:text="确定并提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_font_detail_content_14sp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
