<?xml version="1.0" encoding="utf-8"?>
<com.superdata.marketing.view.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividing_line" />

    <com.superdata.marketing.view.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_marginBottomPercent="@string/space"
        app:layout_paddingPercent="3.5%w">

        <com.superdata.marketing.view.percent.PercentLinearLayout
            android:id="@+id/left_ly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/left_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@mipmap/notice_btn_confirm"
                app:layout_heightPercent="16.8%w"
                app:layout_widthPercent="16.8%w" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审阅人"
                app:layout_paddingLeftPercent="5%w"
                app:layout_textSizePercent="10.5%w" />
        </com.superdata.marketing.view.percent.PercentLinearLayout>

        <com.superdata.marketing.view.percent.PercentLinearLayout
            android:id="@+id/right_ly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/right_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@mipmap/img_reply"
                app:layout_heightPercent="16.8%w"
                app:layout_widthPercent="16.8%w" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抄送"
                app:layout_paddingLeftPercent="5%w"
                app:layout_textSizePercent="10.5%w" />
        </com.superdata.marketing.view.percent.PercentLinearLayout>

        <!--  <include layout_city="@layout_city/sd_workcircle_list_item_detail_tool"/> -->
    </com.superdata.marketing.view.percent.PercentLinearLayout>

</com.superdata.marketing.view.percent.PercentLinearLayout>
