<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@color/color_personnel_affairs_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f9f9"
        android:gravity="center"
        android:padding="10dp"
        android:text="标题"
        android:textColor="@color/color_personnel_affairs_dialog"
        android:textSize="@dimen/sp_font_home_page_title_20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_spacing_10dp">
        <Button
            android:id="@+id/btnOk"
            style="@style/listDialog_add_depart_btnStyle"
            android:layout_marginRight="15dp"
            android:text="新增" />

        <Button
            android:id="@+id/btnCancel"
            style="@style/listDialog_add_depart_btnStyle"
            android:layout_marginLeft="15dp"
            android:background="#c8c8c8"
            android:textColor="#878787"
            android:text="取消" />

    </LinearLayout>
</LinearLayout>
