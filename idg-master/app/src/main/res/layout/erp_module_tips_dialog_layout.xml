<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_bottom_height"
        android:background="#e3e6e5">

        <tablayout.view.textview.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/submit_tip_title"
            android:textSize="@dimen/sumb_detail_size_15" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:background="@color/white">

        <tablayout.view.textview.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="本系统支持桌面电脑应用"
            android:textSize="15sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_bottom_height"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/erp_dialog_sure_tv_str"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_bottom_height"
            android:layout_weight="1"
            android:background="#e3e6e5"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/send_bottom_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/erp_submit_delete_btn_item_bg">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="27dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <tablayout.view.textview.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/submit_tip_sure"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sumb_detail_size_15" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
