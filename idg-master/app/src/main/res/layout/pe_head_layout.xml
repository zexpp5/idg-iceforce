<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar_layout"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_spacing_12dp"
                android:paddingLeft="@dimen/dp_spacing_to_left_right_15dp"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本资料"
                    android:textColor="#333"
                    android:textSize="17sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/open_edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/edit_pic" />

        </RelativeLayout>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_to_left_right_15dp"
            android:layout_marginRight="@dimen/dp_spacing_to_left_right_15dp"
            android:paddingBottom="@dimen/dp10">

            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_10"
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:text="项目名称"
                android:textColor="@color/text_black_s"
                app:layout_constraintBottom_toTopOf="@+id/tv_9"
                app:layout_constraintLeft_toLeftOf="@+id/tv_1"
                app:layout_constraintRight_toRightOf="@+id/tv_1" />

            <tablayout.view.textview.FontEditext
                android:id="@+id/project_name"
                style="@style/font_edtext_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_black_xl"
                app:layout_constraintBottom_toBottomOf="@+id/tv_10"
                app:layout_constraintLeft_toRightOf="@+id/tv_10"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_10" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_9"
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:text="当前轮次"
                android:textColor="@color/text_black_s"
                app:layout_constraintBottom_toTopOf="@+id/tv_8"
                app:layout_constraintLeft_toLeftOf="@+id/tv_1"
                app:layout_constraintRight_toRightOf="@+id/tv_1" />

            <tablayout.view.textview.FontEditext
                android:id="@+id/invest_present"
                style="@style/font_edtext_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#333"
                app:layout_constraintBottom_toBottomOf="@+id/tv_9"
                app:layout_constraintLeft_toRightOf="@+id/tv_9"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_9" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_8"
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:text="约见状态"
                android:textColor="@color/text_black_s"
                app:layout_constraintBottom_toTopOf="@+id/tv_7"
                app:layout_constraintLeft_toLeftOf="@+id/tv_1"
                app:layout_constraintRight_toRightOf="@+id/tv_1" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/invest_invite"
                style="@style/font_edtext_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#333"
                app:layout_constraintBottom_toBottomOf="@+id/tv_8"
                app:layout_constraintLeft_toRightOf="@+id/tv_8"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_8" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_7"
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:text="行业"
                android:textColor="@color/text_black_s"
                app:layout_constraintBottom_toTopOf="@+id/tv_6"
                app:layout_constraintLeft_toLeftOf="@+id/tv_1"
                app:layout_constraintRight_toRightOf="@+id/tv_1" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/invest_trade"
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_black_xl"
                app:layout_constraintBottom_toBottomOf="@+id/tv_7"
                app:layout_constraintLeft_toRightOf="@+id/tv_7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_7" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_6"
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:text="投资机构"
                android:textColor="@color/text_black_s"
                app:layout_constraintBottom_toTopOf="@+id/tv_5"
                app:layout_constraintLeft_toLeftOf="@+id/tv_1"
                app:layout_constraintRight_toRightOf="@+id/tv_1" />

            <tablayout.view.textview.FontEditext
                android:id="@+id/invest_gov"
                style="@style/font_edtext_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#333"
                app:layout_constraintBottom_toBottomOf="@+id/tv_6"
                app:layout_constraintLeft_toRightOf="@+id/tv_6"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_6" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_5"
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:text="城市"
                android:textColor="@color/text_black_s"
                app:layout_constraintBottom_toTopOf="@+id/tv_4"
                app:layout_constraintLeft_toLeftOf="@+id/tv_1"
                app:layout_constraintRight_toRightOf="@+id/tv_1" />

            <tablayout.view.textview.FontEditext
                android:id="@+id/invest_city"
                style="@style/font_edtext_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_black_xl"
                app:layout_constraintBottom_toBottomOf="@+id/tv_5"
                app:layout_constraintLeft_toRightOf="@+id/tv_5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_5" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_4"
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:text="跟进状态"
                android:textColor="@color/text_black_s"
                app:layout_constraintBottom_toTopOf="@+id/tv_3"
                app:layout_constraintLeft_toLeftOf="@+id/tv_1"
                app:layout_constraintRight_toRightOf="@+id/tv_1" />

            <tablayout.view.textview.FontEditext
                android:id="@+id/invest_state"
                style="@style/font_edtext_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#333"
                app:layout_constraintBottom_toBottomOf="@+id/tv_4"
                app:layout_constraintLeft_toRightOf="@+id/tv_4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_4" />


            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_3"
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:text="接触时间"
                android:textColor="@color/text_black_s"
                app:layout_constraintBottom_toTopOf="@+id/tv_2"
                app:layout_constraintLeft_toLeftOf="@+id/tv_1"
                app:layout_constraintRight_toRightOf="@+id/tv_1" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/connect_time"
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_black_xl"
                app:layout_constraintBottom_toBottomOf="@+id/tv_3"
                app:layout_constraintLeft_toRightOf="@+id/tv_3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_3" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_2"
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:text="负责人"
                android:textColor="@color/text_black_s"
                app:layout_constraintBottom_toTopOf="@+id/tv_1"
                app:layout_constraintLeft_toLeftOf="@+id/tv_1"
                app:layout_constraintRight_toRightOf="@+id/tv_1" />

            <tablayout.view.textview.FontEditext
                android:id="@+id/response_man"
                style="@style/font_edtext_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_black_xl"
                app:layout_constraintBottom_toBottomOf="@+id/tv_2"
                app:layout_constraintLeft_toRightOf="@+id/tv_2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_2" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_1"
                style="@style/font_text_content_sytle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:paddingRight="@dimen/dp5"
                android:text="IDG资本投资情况"
                android:textColor="@color/text_black_s"
                app:layout_constraintBottom_toTopOf="@+id/tv_0"
                app:layout_constraintLeft_toLeftOf="parent"

                />

            <tablayout.view.textview.FontTextView
                android:id="@+id/group_situation"
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_black_xl"
                app:layout_constraintBottom_toBottomOf="@+id/tv_1"
                app:layout_constraintLeft_toRightOf="@+id/tv_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_1" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_0"
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="是否重点项目"

                android:textColor="@color/text_black_s"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/tv_1"
                app:layout_constraintRight_toRightOf="@+id/tv_1" />

            <tablayout.view.textview.FontTextView
                android:id="@+id/btn_emphases_project"
                style="@style/font_text_content_sytle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#333"
                app:layout_constraintBottom_toBottomOf="@+id/tv_0"
                app:layout_constraintLeft_toRightOf="@+id/tv_0"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_0" />
        </android.support.constraint.ConstraintLayout>



        <include layout="@layout/bottom_line_view_big" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="业务介绍"
                    android:textColor="#333"
                    android:textSize="17sp" />

            </LinearLayout>

            <tablayout.view.textview.FontEditext
                android:id="@+id/trade_introduce_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@null"
                android:hint="请输入业务介绍"
                android:maxLength="200"
                android:textColor="#333333"
                android:textSize="16sp" />

        </LinearLayout>

        <include layout="@layout/bottom_line_view_big" />


    </LinearLayout>

</LinearLayout>