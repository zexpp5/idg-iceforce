<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@color/white"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <tablayout.view.textview.FontTextView
            android:id="@+id/warehouse_reason"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_bottom_height"
            android:gravity="center"
            android:text="退  出"
            android:textSize="17sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_spacing_15dp"
            android:layout_marginLeft="@dimen/dp_spacing_10dp"
            android:layout_marginRight="@dimen/dp_spacing_10dp"
            android:layout_marginTop="@dimen/dp_spacing_15dp"
            android:gravity="center"
        >

            <tablayout.view.textview.FontTextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5c5c5c"
                android:textSize="16sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
        >

            <tablayout.view.textview.FontTextView
                android:id="@+id/et_verify_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#545454"
                android:textSize="16sp"/>
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/finance_briefing_dialog_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
    >

        <RelativeLayout
            android:id="@+id/delete_bottom_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
        >


            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/choose_sex_cancel"
                android:textSize="@dimen/sumb_detail_size_15"/>

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/finance_briefing_dialog_line"
        />

        <RelativeLayout
            android:id="@+id/send_bottom_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
        >


            <tablayout.view.textview.FontTextView
                android:id="@+id/tv_open"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/choose_sex_sure"
                android:textSize="@dimen/sumb_detail_size_15"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>