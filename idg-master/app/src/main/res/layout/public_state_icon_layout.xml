<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp_spacing_8dp"
    android:paddingBottom="@dimen/dp_spacing_8dp"
    android:background="@color/enclosure_color"
    >

    <TextView
        android:layout_marginLeft="@dimen/dp_spacing_to_left_right_15dp"
        android:id="@+id/approval_flow_text"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/sp_font_detail_content_15sp"
        android:text="审批流程："
        android:textColor="@color/blackOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:layout_marginLeft="@dimen/dp_spacing_to_text_5dp"
        android:id="@+id/state_flow_one"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/state_one_normal"
        />

    <ImageView
        android:layout_marginLeft="@dimen/dp_spacing_15dp"
        android:id="@+id/state_flow_two"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/state_two_normal"
        />
    <ImageView
        android:layout_marginLeft="@dimen/dp_spacing_15dp"
        android:id="@+id/state_flow_three"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/state_three_normal"
        />
    <ImageView
        android:layout_marginLeft="@dimen/dp_spacing_15dp"
        android:id="@+id/state_flow_four"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/state_four_normal"
        />
    <ImageView
        android:layout_marginLeft="@dimen/dp_spacing_15dp"
        android:id="@+id/state_flow_five"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/state_five_normal"
        />
    <ImageView
        android:layout_marginLeft="@dimen/dp_spacing_15dp"
        android:id="@+id/state_flow_six"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/state_six_normal"
        />
</LinearLayout>