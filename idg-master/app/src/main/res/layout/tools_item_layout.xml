<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/tools_image"
        android:layout_margin="12dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/file_pdf"
        />

    <TextView
        android:textColor="#333"
        android:textSize="16sp"
        android:layout_toLeftOf="@+id/pdf_item_time"
        android:layout_toRightOf="@+id/tools_image"
        android:id="@+id/pdf_item_title"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginRight="10dp"
        android:textColor="#666"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:id="@+id/pdf_item_time"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bbb"
            android:layout_below="@+id/tools_image"
            />

    </RelativeLayout>


</LinearLayout>