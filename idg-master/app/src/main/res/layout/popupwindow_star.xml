<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="120dp"
    android:paddingLeft="@dimen/dp_spacing_10dp"
    android:paddingRight="@dimen/dp_spacing_10dp"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/ll_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_spacing_15dp"
        android:layout_marginBottom="@dimen/dp_spacing_15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/icon_star_half"
            android:layout_marginLeft="@dimen/dp_spacing_10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_8dp"
            android:text="跟踪"
            android:textSize="@dimen/sp_font_detail_content_12sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_view_line_1dp"
        android:background="@color/bg_gray" />

    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_spacing_15dp"
        android:layout_marginBottom="@dimen/dp_spacing_15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@mipmap/icon_star_all"
            android:layout_marginLeft="@dimen/dp_spacing_10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_8dp"
            android:text="重点跟踪"
            android:textSize="@dimen/sp_font_detail_content_12sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_view_line_1dp"
        android:background="@color/bg_gray" />


    <LinearLayout
        android:id="@+id/ll_hollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_spacing_15dp"
        android:layout_marginBottom="@dimen/dp_spacing_15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@mipmap/icon_star_hollow"
            android:layout_marginLeft="@dimen/dp_spacing_10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_8dp"
            android:text="取消跟踪"
            android:textSize="@dimen/sp_font_detail_content_12sp"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>