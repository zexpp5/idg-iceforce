<?xml version="1.0" encoding="utf-8"?>
<com.superdata.marketing.view.percent.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fragment_bg"
    android:orientation="vertical">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.cxgz.activity.superqq.activity.ErweimaActivity">

        <include
            android:id="@+id/title_super"
            layout="@layout/sd_top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

        <ImageView
            android:id="@+id/iv_erweima"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"/>

        <tablayout.view.textview.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_erweima"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="扫一扫或保存二维码到相册，发送给同事"/>


    </RelativeLayout>
</com.superdata.marketing.view.percent.PercentLinearLayout>
