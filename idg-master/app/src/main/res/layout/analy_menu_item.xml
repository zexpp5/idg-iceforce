<?xml version="1.0" encoding="utf-8"?>
<tablayout.view.rippleview.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.superdata.marketing.view.percent.PercentRelativeLayout
        android:id="@+id/ly_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/search_icon_de_bg"
        android:gravity="center">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:layout_heightPercent="13%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_widthPercent="13%w"/>

        <tablayout.view.textview.FontTextView
            android:id="@+id/menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/search_icon_de_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text="tablayout.view.textview.FontTextView"
            android:textColor="@drawable/analy_itemcolor"
            android:textSize="@dimen/font_size_item_content"
            app:layout_paddingPercent="7%w"
        />

        <tablayout.view.textview.FontTextView
            android:id="@+id/menu_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/menu_item"
            android:background="#2f3241"
            android:textSize="@dimen/font_size_item_content"
            android:gravity="center|left"
            android:singleLine="true"
            android:textColor="@drawable/analy_itemcolor"
        />

        <View
            android:id="@+id/view_analy_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:background="#7ca569"></View>
    </com.superdata.marketing.view.percent.PercentRelativeLayout>
</tablayout.view.rippleview.MaterialRippleLayout>
