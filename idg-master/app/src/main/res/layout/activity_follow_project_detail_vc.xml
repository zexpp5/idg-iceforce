<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/top_bar_layout"
        layout="@layout/top_title_layout" />

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_row_height_40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/top_bg"
        android:text="完成跟进内容"
        android:textColor="@color/white"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar_layout"
        android:layout_above="@id/tv_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/top_bg"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_spacing_10dp"
                android:paddingTop="@dimen/dp_spacing_5dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_spacing_10dp"
                    android:layout_marginLeft="18dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_font_detail_content_16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_spacing_8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="投资领域"
                    android:textColor="@color/text_black_l" />

                <TextView
                    android:id="@+id/tv_comIndusStr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/text_black_l" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_spacing_8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/dp_spacing_4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="业务信息"
                    android:textColor="@color/text_black_l" />

                <TextView
                    android:id="@+id/tv_zhDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_spacing_8dp"
                    android:layout_weight="2"
                    android:text=""
                    android:textColor="@color/text_black_l" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/dp_spacing_4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="项目小组成员"
                    android:textColor="@color/text_black_l" />

                <TextView
                    android:id="@+id/tv_projTeamNames"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=""
                    android:textColor="@color/text_black_l" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/dividing_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_spacing_10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="@dimen/dp_spacing_10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目记录"
                    android:textColor="@color/text_black_l" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_spacing_20dp"
                    android:textColor="@color/text_black_l" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/dividing_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_spacing_10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="@dimen/dp_spacing_10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="讨论内容"
                    android:textColor="@color/text_black_l" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_spacing_20dp"
                    android:layout_marginRight="@dimen/dp_spacing_8dp"
                    android:textColor="@color/text_black_l" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="@dimen/dp_spacing_10dp"
                android:background="@color/dividing_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_spacing_20dp"
                    android:layout_marginLeft="@dimen/dp_spacing_18dp"
                    android:layout_marginTop="@dimen/dp_spacing_20dp"
                    android:text="见过的人"
                    android:textColor="@color/text_black_xxl" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_spacing_8dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="@dimen/dp_spacing_20dp"
                    android:text="团队评分"
                    android:textColor="@color/text_black_xxl" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_spacing_15dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="@dimen/dp_spacing_20dp"
                    android:text="市场评分"
                    android:textColor="@color/text_black_xxl" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_spacing_10dp"
                android:layout_marginTop="@dimen/dp_spacing_10dp"
                android:text="查看更多"
                android:textColor="@color/blue" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/dividing_line" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>