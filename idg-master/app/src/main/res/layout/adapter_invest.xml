<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_spacing_5dp"
        android:layout_marginBottom="@dimen/dp_spacing_5dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_spacing_20dp"
            app:cardCornerRadius="@dimen/dp_spacing_25dp"
            app:cardElevation="3dp">

            <yunjing.view.DrawText
                android:id="@+id/draw_text"
                android:layout_width="60dp"
                android:layout_height="60dp" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_spacing_20dp"
            android:layout_marginRight="@dimen/dp_spacing_20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_spacing_5dp"
                android:layout_marginBottom="@dimen/dp_spacing_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资基金"
                    android:textColor="@color/text_black_l"
                    android:textSize="@dimen/sp_font_detail_content_14sp"
                    />

                <TextView
                    android:id="@+id/tv_fundName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_font_detail_content_14sp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_spacing_5dp"
                android:layout_marginBottom="@dimen/dp_spacing_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资金额"
                    android:textColor="@color/text_black_l"
                    android:textSize="@dimen/sp_font_detail_content_14sp"
                    />

                <TextView
                    android:id="@+id/tv_invTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_font_detail_content_14sp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_spacing_5dp"
                android:layout_marginBottom="@dimen/dp_spacing_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资估值"
                    android:textColor="@color/text_black_l"
                    android:textSize="@dimen/sp_font_detail_content_14sp"
                    />

                <TextView
                    android:id="@+id/tv_valuationOfFund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_font_detail_content_14sp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_spacing_5dp"
                android:layout_marginBottom="@dimen/dp_spacing_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基金所占股比"
                    android:textColor="@color/text_black_l"
                    android:textSize="@dimen/sp_font_detail_content_14sp"
                    />

                <TextView
                    android:id="@+id/tv_ownership"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_black_xl"
                    android:textSize="@dimen/sp_font_detail_content_14sp"
                    />


            </RelativeLayout>


        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_view_line_1dp"
        android:background="@color/dividing_line" />

</LinearLayout>