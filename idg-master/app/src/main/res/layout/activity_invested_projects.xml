<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_height_title_48dp"
        android:background="@color/top_bg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_spacing_20dp"
            android:background="@mipmap/icon_public_back"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_font_detail_content_18sp"/>

            <TextView
                android:id="@+id/tv_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_spacing_4dp"
                android:ellipsize="end"
                android:maxEms="13"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_font_detail_content_16sp"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_at"
            android:layout_width="20dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/icon_more"
            android:visibility="gone"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/top_bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_10dp"
                        android:layout_marginLeft="@dimen/dp_spacing_20dp"
                        android:layout_marginTop="@dimen/dp_spacing_20dp"
                        android:text="累计投资"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_font_detail_content_15sp"/>

                    <LinearLayout
                        android:id="@+id/ll_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_10dp"
                        android:layout_marginLeft="@dimen/dp_spacing_20dp"
                        android:layout_marginRight="@dimen/dp_spacing_20dp"
                        android:layout_marginTop="@dimen/dp_spacing_10dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_spacing_10dp"
                            android:layout_marginTop="@dimen/dp_spacing_10dp"
                            android:layout_weight="2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_font_detail_content_20sp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="估值增长"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_font_detail_content_14sp"/>

                            <TextView
                                android:id="@+id/tv_ownership"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/red"
                                android:textSize="@dimen/sp_font_detail_content_14sp"/>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_total_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_10dp"
                        android:layout_marginLeft="@dimen/dp_spacing_20dp"
                        android:layout_marginRight="@dimen/dp_spacing_20dp"
                        android:layout_marginTop="@dimen/dp_spacing_10dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_total_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_spacing_10dp"
                            android:layout_marginTop="@dimen/dp_spacing_10dp"
                            android:layout_weight="2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_font_detail_content_20sp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_month_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="估值增长"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_font_detail_content_14sp"/>

                            <TextView
                                android:id="@+id/tv_ownership_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/red"
                                android:textSize="@dimen/sp_font_detail_content_14sp"/>


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_water"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                >

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_spacing_10dp"
                        android:layout_marginLeft="@dimen/dp_spacing_20dp"
                        android:layout_marginTop="@dimen/dp_spacing_10dp"
                        android:text=""
                        android:textColor="@color/text_black_l"
                        android:textSize="@dimen/sp_font_detail_content_15sp"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/invest_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"/>


                    <TextView
                        android:id="@+id/tv_invest_more"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="显示更多"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_font_detail_content_13sp"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_view_line_2dp"
                android:background="@color/dividing_line"/>

            <LinearLayout
                android:id="@+id/ll_water1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
            >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_appl"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_spacing_20dp"
                android:layout_marginTop="@dimen/dp_spacing_20dp"
                android:background="@drawable/btn_shape_appl"
                android:text="申请更多查看权限"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_font_detail_content_14sp"
                android:visibility="visible"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>